/* packageA/noteList/noteList.wxss */
.notification-container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 消息分类标签 */
.tab-container {
  white-space: nowrap;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.tab-item.active {
  background-color: #ff6b9c;
  color: #fff;
}

/* 未读消息数量 */
.unread-count {
  display: inline-block;
  min-width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  margin-left: 10rpx;
  background-color: #ff6b9c;
  color: #fff;
  font-size: 20rpx;
  border-radius: 15rpx;
  text-align: center;
  vertical-align: middle;
}

/* 消息列表 */
.notification-list {
  height: calc(100vh - 200rpx);
}

/* 消息项 */
.notification-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #e8e4e4;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notification-item.announcement {
  border-left: 8rpx solid #ff6b9c;
}

.read {
  background-color: #f7f1f1;
}

/* 消息头部 */
.notification-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.action {
  font-size: 24rpx;
  color: #999;
}

.time {
  font-size: 22rpx;
  color: #bbb;
}

/* 消息内容 */
.notification-content {
  padding-left: 80rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}

.content-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}