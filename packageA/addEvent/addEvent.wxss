.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  /* min-height: 100vh; */
}

.add-event-form {
  /* background: white; */
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  /* box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); */
}

.form-item {
  margin-bottom: 30rpx;
  /* height: 200rpx; */
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  color: #666;
}

.picker {
  padding: 20rpx;
  border: 1rpx solid #010101;
  border-radius: 8rpx;
  background: #fafafa;
}

.input {
  padding: 20rpx;
  border: 1rpx solid #131212;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
}

.textarea {
  padding: 20rpx;
  border: 1rpx solid #272626;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-height: 150rpx;
  width: 100%;
}

.add-btn {
  background: #030303;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: 100%;
}

.add-btn:active {
  background: #5e605e;
}