.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  /* min-height: 100vh; */
}

.submit-form {
  /* background: white; */
  border-radius: 10rpx;
  padding: 30rpx;
  /* box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); */
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.style-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.style-option {
  padding: 15rpx 30rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.style-option.selected {
  background: #0c0c0c;
  color: white;
}

.upload-section {
  width: 100%;
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  border: 2rpx dashed #080808;
}

.upload-placeholder {
  color: #999;
  font-size: 28rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.description-input {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  border: 1rpx solid #080808;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.cooldown-info {
  text-align: center;
  color: #ff4d4f;
  margin: 20rpx 0;
}

.submit-btn {
  background: #030303;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: 100%;
}

.submit-btn:disabled {
  background: #ccc;
}

.submit-btn:active {
  background: #e07da5;
}