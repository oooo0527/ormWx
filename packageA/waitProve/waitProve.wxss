/* packageA/waitProve/waitProve.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  position: relative;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  color: #ff6b6b;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #ff6b6b;
  border-radius: 3rpx;
}

.badge {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  flex: 1;
  padding: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  word-wrap: break-word;
}

.item-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  border-radius: 50rpx;
  font-size: 24rpx;
  padding: 15rpx 30rpx;
  border: none;
}

.btn-reject {
  background-color: #ffa5a5;
  color: #fff;
}

.btn-reject::after {
  border: none;
}

.btn-approve {
  background-color: #4cd964;
  color: #fff;
}

.btn-approve::after {
  border: none;
}