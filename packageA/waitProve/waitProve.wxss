/* 拒绝理由弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(12, 17, 23, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

.modal-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.5);
  box-shadow: 0 10rpx 30rpx rgba(12, 17, 23, 0.3);
  animation: bounceIn 0.5s ease-out;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(244, 142, 181, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #f48eb5 0%, #f7669d 100%);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(12, 17, 23, 0.3);
}

.close-icon {
  cursor: pointer;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.reason-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(244, 142, 181, 0.2);
}

.reason-item:last-child {
  border-bottom: none;
}

.reason-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #0c1117;
}

