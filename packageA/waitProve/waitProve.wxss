/* packageA/waitProve/waitProve.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #0c1117 0%, #f48eb5 100%);
  box-sizing: border-box;
  position: relative;
}

.header {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(12, 17, 23, 0.2);
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(12, 17, 23, 0.3);
}

.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  /* overflow: hidden; */
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  width: 100%;
  position: fixed;
  /* top: 130rpx; */
  width: 100%;
  z-index: 3;
}

.tab {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  position: relative;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.tab.active {
  color: #ffffff;
  font-weight: bold;
  background: rgba(244, 142, 181, 0.3);
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #ffffff;
  border-radius: 3rpx;
}

.badge {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  flex: 1;
  /* padding: 20rpx 0; */
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  color: rgba(255, 255, 255, 0.7);
  animation: fadeIn 0.5s ease-out;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  padding: 0 40rpx;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  animation: fadeIn 0.5s ease-out;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(244, 142, 181, 0.3);
  border-top: 4rpx solid #f48eb5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

.item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(12, 17, 23, 0.2);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease-out;
  animation-fill-mode: backwards;
}

.item:nth-child(1) {
  animation-delay: 0.1s;
}

.item:nth-child(2) {
  animation-delay: 0.2s;
}

.item:nth-child(3) {
  animation-delay: 0.3s;
}

.item:nth-child(4) {
  animation-delay: 0.4s;
}

.item:nth-child(5) {
  animation-delay: 0.5s;
}

.item:nth-child(6) {
  animation-delay: 0.6s;
}

.item:nth-child(7) {
  animation-delay: 0.7s;
}

.item:nth-child(8) {
  animation-delay: 0.8s;
}

.item:nth-child(9) {
  animation-delay: 0.9s;
}

.item:nth-child(10) {
  animation-delay: 1.0s;
}

.item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 25rpx rgba(12, 17, 23, 0.3);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(100%);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }

  50% {
    opacity: 1;
    transform: scale(1.05);
  }

  70% {
    transform: scale(0.9);
  }

  100% {
    transform: scale(1);
  }
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(244, 142, 181, 0.2);
