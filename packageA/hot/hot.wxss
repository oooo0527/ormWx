/* packageA/hot/hot.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #0c1117 0%, #f48eb5 100%);
  box-sizing: border-box;
  position: relative;
  padding: 0 20rpx;
}

.header {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(12, 17, 23, 0.2);
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  width: 100%;
  position: fixed;
  top: calc(130rpx);
  z-index: 3;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(12, 17, 23, 0.3);
}

.hot-list {
  flex: 1;
  /* margin-top: 120rpx; */
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  animation: fadeIn 0.5s ease-out;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(244, 142, 181, 0.3);
  border-top: 4rpx solid #f48eb5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  color: rgba(255, 255, 255, 0.7);
  animation: fadeIn 0.5s ease-out;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  padding: 0 40rpx;
}

/* 留言项样式 */
.item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(12, 17, 23, 0.2);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(244, 142, 181, 0.3);
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease-out;
  animation-fill-mode: backwards;
}

.item:nth-child(1) {
  animation-delay: 0.1s;
}

.item:nth-child(2) {
  animation-delay: 0.2s;
}

.item:nth-child(3) {
  animation-delay: 0.3s;
}

.item:nth-child(4) {
  animation-delay: 0.4s;
}

.item:nth-child(5) {
  animation-delay: 0.5s;
}

.item:nth-child(6) {
  animation-delay: 0.6s;
}

.item:nth-child(7) {
  animation-delay: 0.7s;
}

.item:nth-child(8) {
  animation-delay: 0.8s;
}

.item:nth-child(9) {
  animation-delay: 0.9s;
}

.item:nth-child(10) {
  animation-delay: 1.0s;
}

.item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 25rpx rgba(12, 17, 23, 0.3);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(244, 142, 181, 0.2);
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
}

.item-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.item-content {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  margin-bottom: 30rpx;
  word-wrap: break-word;
}

.item-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

/* 收起状态的样式 */
.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.expand-collapse {
  text-align: right;
  margin-top: 10rpx;
}

.expand-btn {
  color: #f48eb5;
  font-size: 26rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.expand-btn:active {
  transform: scale(0.95);
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid rgba(244, 142, 181, 0.2);
  padding-top: 15rpx;
}

.comment-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}