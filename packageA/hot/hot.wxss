/* packageA/hot/hot.wxss */
.container {
  display: flex;
  flex-direction: column;
  background: #E9E8EF;
  box-sizing: border-box;
  position: relative;
  padding: 0 20rpx;
}

.header {
  padding: 30rpx;
  background: rgba(245, 245, 245, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  width: 100%;
  position: fixed;
  top: calc(130rpx);
  z-index: 3;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.hot-list {
  flex: 1;
  /* margin-top: 120rpx; */
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(245, 245, 245, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.5s ease-out;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  text-align: center;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background: rgba(245, 245, 245, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.7);
  animation: fadeIn 0.5s ease-out;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.7);
  text-align: center;
  padding: 0 40rpx;
}

/* 留言项样式 */
.item {
  background: rgba(250, 250, 250, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  animation: fadeIn 0.5s ease-out;
  animation-fill-mode: backwards;
}

.item:nth-child(1) {
  animation-delay: 0.1s;
}

.item:nth-child(2) {
  animation-delay: 0.2s;
}

.item:nth-child(3) {
  animation-delay: 0.3s;
}

.item:nth-child(4) {
  animation-delay: 0.4s;
}

.item:nth-child(5) {
  animation-delay: 0.5s;
}

.item:nth-child(6) {
  animation-delay: 0.6s;
}

.item:nth-child(7) {
  animation-delay: 0.7s;
}

.item:nth-child(8) {
  animation-delay: 0.8s;
}

.item:nth-child(9) {
  animation-delay: 0.9s;
}

.item:nth-child(10) {
  animation-delay: 1.0s;
}

.item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.1);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
}

.item-time {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.7);
}

.item-content {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.6;
  margin-bottom: 30rpx;
  word-wrap: break-word;
}

.item-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

/* 收起状态的样式 */
.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.expand-collapse {
  text-align: right;
  margin-top: 10rpx;
}

.expand-btn {
  color: #333333;
  font-size: 26rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.expand-btn:active {
  transform: scale(0.95);
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  padding-top: 15rpx;
}

.comment-count {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.7);
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.7);
}

/* 评论区域样式 */
.comments-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(245, 245, 245, 0.9);
  border-radius: 10rpx;
}

.comments-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.comment-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.comment-nickname {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
}

.comment-time {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.6);
}

.comment-content {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
  line-height: 1.4;
}