.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.menu-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.menu-list {
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.menu-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow-icon {
  color: #999;
  font-size: 30rpx;
  font-weight: bold;
}

.events-list {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.list-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  text-align: center;
}

.event-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.event-item:last-child {
  border-bottom: none;
}

.event-info {
  flex: 1;
}

.event-date {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.event-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.event-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.delete-btn:active {
  background: #d9363e;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 50rpx 0;
}