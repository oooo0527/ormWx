.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 瀑布流容器 */
.waterfall-container {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  box-sizing: border-box;
  width: 100%;
  justify-content: space-between;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  box-sizing: border-box;
  min-width: 0;
  width: 0;
}

.voice-item {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  transition: all 0.3s ease;
  width: 100%;
  flex-shrink: 0;
}

.voice-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.voice-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex: 1;
  min-width: 0;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.voice-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
  box-sizing: border-box;
  word-wrap: break-word;
  overflow: hidden;
}

/* 图片容器 */
.voice-images {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.voice-image {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  cursor: pointer;
  display: block;
}

.voice-image:last-child {
  margin-bottom: 0;
}

/* 纯图片内容 */
.image-only {
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.main-image {
  width: 100%;
  border-radius: 10rpx;
  box-sizing: border-box;
  cursor: pointer;
  display: block;
}

.voice-context {
  background: #f0f8ff;
  border-left: 6rpx solid #007AFF;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.context-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  box-sizing: border-box;
  word-wrap: break-word;
}

.voice-actions {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.action-item {
  display: flex;
  align-items: center;
  cursor: pointer;
  box-sizing: border-box;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .waterfall-container {
    flex-direction: column;
  }

  .waterfall-column {
    width: 100%;
  }

  .container {
    padding: 10rpx;
  }

  .voice-item {
    width: 100%;
  }
}

/* 强制覆盖可能的全局样式 */
.waterfall-container {
  display: flex !important;
  flex-direction: row !important;
  width: 100% !important;
}

.waterfall-column {
  flex: 1 !important;
  width: 0 !important;
  display: flex !important;
  flex-direction: column !important;
}