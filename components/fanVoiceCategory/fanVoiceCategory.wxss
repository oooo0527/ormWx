.category-container {
  background: white;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.category-list {
  display: flex;
  min-width: 100%;
}

.category-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
  flex-shrink: 0;
}

.category-item.active {
  background: #007AFF;
  color: white;
  transform: scale(1.05);
  box-shadow: 0 4rpx 15rpx rgba(0, 122, 255, 0.3);
}

.category-item:active {
  transform: scale(0.95);
}