/* components/privacyDialog/privacyDialog.wxss */
.privacy-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.dialog-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }

  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.dialog-header {
  padding: 30rpx;
  text-align: center;
  background-color: #f8f8f8;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.dialog-content {
  padding: 30rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.dialog-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-disagree,
.btn-agree {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.btn-disagree {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.btn-agree {
  background-color: #007aff;
  color: #fff;
  margin-left: 20rpx;
}

.learn-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.learn-more-text {
  font-size: 28rpx;
  color: #007aff;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}