.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.support-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.support-item {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.support-item:active {
  transform: scale(0.98);
}

.cover-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.item-content {
  padding: 20rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.item-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
  line-height: 1.5;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.item-location {
  font-size: 24rpx;
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}