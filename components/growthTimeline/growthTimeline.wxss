/* components/growthTimeline/growthTimeline.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  /* background: linear-gradient(to bottom, #0c1445, #1a237e, #4a148c); */
}

.star-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.star {
  position: absolute;
  background-color: white;
  border-radius: 50%;
  animation: twinkle 3s infinite alternate;
}

@keyframes twinkle {
  0% {
    opacity: 0.2;
  }

  100% {
    opacity: 1;
  }
}

@keyframes starTwinkle {
  0% {
    opacity: 0.4;
    transform: translate(-50%, -50%) rotate(0deg) scale(1);
    filter: drop-shadow(0 0 2rpx rgba(214, 205, 210, 0.5));
  }

  25% {
    opacity: 0.7;
    transform: translate(-50%, -50%) rotate(20deg) scale(1.1);
    filter: drop-shadow(0 0 5rpx rgba(202, 190, 196, 0.7));
  }

  50% {
    opacity: 1;
    transform: translate(-50%, -50%) rotate(45deg) scale(1.2);
    filter: drop-shadow(0 0 10rpx rgb(216, 202, 209));
  }

  75% {
    opacity: 0.7;
    transform: translate(-50%, -50%) rotate(70deg) scale(1.1);
    filter: drop-shadow(0 0 5rpx rgba(180, 158, 169, 0.7));
  }

  100% {
    opacity: 0.4;
    transform: translate(-50%, -50%) rotate(90deg) scale(1);
    filter: drop-shadow(0 0 2rpx rgba(212, 205, 208, 0.5));
  }
}

.timeline-point {
  position: absolute;
  z-index: 2;
  width: 20rpx;
  height: 20rpx;
  background-color: #ffffff;
  transform: translate(-50%, -50%) rotate(0deg);
  transition: all 0.3s ease;
  cursor: pointer;
  animation: starTwinkle 1.5s infinite alternate;
  filter: drop-shadow(0 0 5rpx rgba(245, 243, 244, 0.8));
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}





.timeline-point.active {
  animation: starActiveTwinkle 0.5s infinite alternate;
  box-shadow: 0 0 20rpx rgba(255, 64, 129, 0.8);
}

@keyframes starActiveTwinkle {
  0% {
    opacity: 0.8;
    transform: translate(-50%, -50%) rotate(0deg) scale(1.2);
    filter: drop-shadow(0 0 10rpx rgba(255, 64, 129, 0.8));
  }

  25% {
    opacity: 0.9;
    transform: translate(-50%, -50%) rotate(90deg) scale(1.3);
    filter: drop-shadow(0 0 15rpx rgba(255, 64, 129, 0.9));
  }

  50% {
    opacity: 1;
    transform: translate(-50%, -50%) rotate(180deg) scale(1.5);
    filter: drop-shadow(0 0 20rpx rgba(255, 64, 129, 1));
  }

  75% {
    opacity: 0.9;
    transform: translate(-50%, -50%) rotate(270deg) scale(1.3);
    filter: drop-shadow(0 0 15rpx rgba(255, 64, 129, 0.9));
  }

  100% {
    opacity: 0.8;
    transform: translate(-50%, -50%) rotate(360deg) scale(1.2);
    filter: drop-shadow(0 0 10rpx rgba(255, 64, 129, 0.8));
  }
}

.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.detail-content {
  width: 80%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
}

.detail-modal.show .detail-content {
  transform: translateY(0);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  cursor: pointer;
}

.detail-body {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #e0e0e0;
  font-weight: 500;
}

.detail-description {
  font-size: 26rpx;
  color: white;
  line-height: 1.5;
}

.header {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 3;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}