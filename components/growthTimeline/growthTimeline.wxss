/* components/growthTimeline/growthTimeline.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  /* background: linear-gradient(to bottom, #0c1445, #1a237e, #4a148c); */
}

.star-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.star {
  position: absolute;
  background-color: white;
  border-radius: 50%;
  animation: twinkle 3s infinite alternate;
}

@keyframes twinkle {
  0% {
    opacity: 0.2;
  }

  100% {
    opacity: 1;
  }
}

.timeline-point {
  position: absolute;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(5px);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
  cursor: pointer;
  background:  #f48eb5;
}





.timeline-point.active {
  transform: translate(-50%, -50%) scale(1.2);
  background: rgba(255, 255, 255, 0.4);
  box-shadow: 0 0 20rpx rgba(255, 64, 129, 0.8);
}

.timeline-point.active .point-inner {
  background: #ffffff;
  box-shadow: 0 0 15rpx #ffffff, 0 0 30rpx #ffffff;
}

.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.detail-content {
  width: 80%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
}

.detail-modal.show .detail-content {
  transform: translateY(0);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  cursor: pointer;
}

.detail-body {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #e0e0e0;
  font-weight: 500;
}

.detail-description {
  font-size: 26rpx;
  color: white;
  line-height: 1.5;
}

.header {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 3;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}