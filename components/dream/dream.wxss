.container {
  /* padding: 20rpx; */
  /* background: #f5f5f5; */
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  width: 100vw;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
  /* 确保标题在水滴之上 */
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  position: relative;
  z-index: 2;
  /* 确保内容在水滴之上 */
}

.voice-item {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.voice-item.dream {
  border-left: 6rpx solid #AF52DE;
  background: linear-gradient(135deg, #f5f0ff, #ffffff);
}

.voice-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.voice-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.voice-context {
  background: #f0f8ff;
  border-left: 6rpx solid #007AFF;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.context-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

.voice-actions {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
  /* 添加渐变边框效果 */
  /* background: linear-gradient(45deg, #AF52DE, #FF6B6B, #4ECDC4); */
  background-size: 300% 300%;
  animation: gradientShift 8s ease infinite;
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

.swiper {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  /* 添加图片加载动画 */
  animation: imageFadeIn 0.8s ease-out;
}

@keyframes imageFadeIn {
  0% {
    opacity: 0;
    transform: scale(1.1);
  }

  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 轮播图指示点样式 */
.wx-swiper-dots {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
  z-index: 3;
}

.wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

.wx-swiper-dot-active {
  width: 24rpx;
  border-radius: 10rpx;
  background: #AF52DE;
  box-shadow: 0 0 10rpx rgba(175, 82, 222, 0.8);
}

/* 时光隧道背景样式 */
.tunnel-background {
  position: relative;
  top: 0;
  left: 0;
  width: 120%;
  /* 增加宽度以容纳更多左右图片 */
  height: 500px;
  pointer-events: none;
  /* 防止隧道图片阻挡点击事件 */
  z-index: 0;
  perspective: 1000px;
  /* 为3D效果添加透视 */
  overflow: hidden;
  /* 添加渐变背景增强深度感 */
  background: linear-gradient(to bottom, rgba(175, 82, 222, 0.1), rgba(175, 82, 222, 0.3), rgba(175, 82, 222, 0.1));
  /* 居中显示 */
  left: -10%;
  /* 添加3D变换样式 */
  transform-style: preserve-3d;
}

.tunnel-image {
  position: absolute;
  border-radius: 10rpx;
  transition: all 0.8s linear;
  /* 添加发光效果 */
  box-shadow: 0 0 20rpx rgba(175, 82, 222, 0.6);
  /* 添加模糊效果 */
  /* filter: blur(0.5px); */
  /* 添加颜色滤镜 */
  /* filter: blur(0.5px) brightness(1.2) saturate(1.3); */
  /* 添加旋转效果 */
  transform: rotate(5deg);
  /* 添加过渡效果使缩放更平滑 */
  transition: transform 3s ease-in-out;
  /* 添加3D变换样式 */
  transform-style: preserve-3d;
  z-index: 1;
}

.tunnel-image:nth-child(2n) {
  transform: rotate(-5deg);
}

.tunnel-image:nth-child(3n) {
  transform: rotate(0deg);
}

.tunnel-image:nth-child(4n) {
  border-radius: 50%;
}

/* 添加隧道效果 */
.tunnel-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* background: radial-gradient(circle at center, transparent 50%, rgba(0, 0, 0, 0.8) 100%); */
  z-index: -1;
  pointer-events: none;
  /* animation: tunnelPulse 8s infinite alternate; */
}

.tunnel-background::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 0%, transparent 30%, transparent 70%, rgba(0, 0, 0, 0.3) 100%); */
  z-index: 1;
  pointer-events: none;
}

@keyframes tunnelPulse {
  0% {
    opacity: 0.3;
  }

  100% {
    opacity: 0.7;
  }
}