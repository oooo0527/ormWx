<global-background>
  <custom-navbar title="煎蛋卷" showBack="{{false}}" showHome="{{false}}"></custom-navbar>
  <view class="container" style="margin-top: {{navBarHeight}}px;min-height:calc(100vh - {{navBarHeight}}px);">
    <view class="profile-card">
      <button class="avatar-wrapper">
        <image class="avatar" src="../../pages/Home/Home.jpg" lazy-load></image>
      </button>
      <text class="nickname">陈奥</text>
      <view class="action-buttons">
        <button class="action-btn background-btn" bindtap="goToBackgroundSetting">
          <image class="action-icon" src="/images/profile/upload.svg" lazy-load></image>
          <text>背景设置</text>
        </button>
      </view>
      <view class="menueList-content">
        <view wx:for="{{menueList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.path}}" class="menueList-list" wx-if="{{item.isManager<=1}}">
          <view>{{item.title}}</view>
        </view>
      </view>
    </view>
  </view>
</global-background>