.container {
  padding: 20rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #d9dde0;
}

.profile-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  width: 100%;
  box-shadow: 0 4rpx 20rpx rgba(17, 17, 17, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid #869dae;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(17, 17, 17, 0.1);
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #111111;
}

.username {
  font-size: 28rpx;
  color: #869dae;
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 15rpx;
  border: 2rpx solid #869dae;
  background: #ffffff;
  color: #111111;
  font-size: 26rpx;
  box-sizing: border-box;
}

.action-btn:active {
  transform: scale(0.98);
  background: #d9dde0;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.edit-btn {
  background: #111111;
  color: #ffffff;
  border: 2rpx solid #869dae;
}

.background-btn {
  background: #869dae;
  color: #111111;
  border: 2rpx solid #869dae;
}

.logout-btn {
  background: #d9dde0;
  color: #111111;
  border: 2rpx solid #869dae;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(17, 17, 17, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  box-sizing: border-box;
}

.modal-content {
  background: #ffffff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 2rpx solid #869dae;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #869dae;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111111;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
}

.modal-body {
  padding: 30rpx;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #869dae;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #869dae;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #ffffff;
  color: #111111;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  box-sizing: border-box;
}

.cancel-btn {
  background: #d9dde0;
  color: #111111;
  border: 2rpx solid #869dae;
}

.confirm-btn {
  background: #111111;
  color: #ffffff;
  border: 2rpx solid #869dae;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 15rpx;
  }

  .profile-card {
    padding: 40rpx 30rpx;
  }

  .avatar {
    width: 100rpx;
    height: 100rpx;
  }

  .action-buttons {
    gap: 15rpx;
  }

  .action-btn {
    padding: 15rpx;
    font-size: 24rpx;
  }

  .action-icon {
    width: 35rpx;
    height: 35rpx;
  }
}