.container {
  box-sizing: border-box;
  position: relative;
  background: #E9E8EF;

  /* padding: 20rpx; */
}

.profile-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 30rpx;
  /* padding: 50rpx 40rpx; */
  width: 100%;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.profile-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  z-index: -1;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 60rpx 0;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #333333;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
}

.avatar {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.username {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
  margin: 40rpx 0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-radius: 20rpx;
  background: rgba(245, 245, 245, 0.9);
  color: #333333;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(230, 230, 230, 0.9);
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.edit-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  color: #333333;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.background-btn {
  background: linear-gradient(135deg, #f0f0f0 0%, #d0d0d0 100%);
  color: #333333;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.logout-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  color: #333333;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

/* 菜单列表 */
.menueList-content {
  width: 100%;
  margin-top: 30rpx;
  overflow: hidden;
  /* box-shadow: 0 4rpx 20rpx rgba(12, 17, 23, 0.1); */
}

.menueList-list {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333333;
  font-size: 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  margin: 10rpx;
  border-radius: 20rpx;
}

.menueList-list:last-child {
  border-bottom: none;
}

.menueList-list::before {
  content: '';
  position: absolute;
  top: 50%;
  left: -20rpx;
  width: 10rpx;
  height: 10rpx;
  background: #333333;
  border-radius: 50%;
  transform: translateY(-50%);
  opacity: 0;
  transition: all 0.3s ease;
}

.menueList-list:active {
  background: rgba(240, 240, 240, 0.9);
  transform: translateX(10rpx);
}

.menueList-list:active::before {
  opacity: 1;
  left: 20rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  box-sizing: border-box;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  width: 85%;
  max-width: 650rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  filter: invert(0);
}

.modal-body {
  padding: 30rpx;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.8);
  color: #333333;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  box-sizing: border-box;
  font-weight: bold;
}

.cancel-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  color: #333333;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.confirm-btn {
  background: linear-gradient(135deg, #333333 0%, #666666 100%);
  color: #E9E8EF;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.05);
  }

  100% {
    transform: scale(1);
  }
}

.profile-card {
  animation: fadeIn 0.6s ease-out;
}

.avatar-wrapper {
  animation: pulse 2s infinite;
}

.menueList-list {
  animation: fadeIn 0.3s ease-out;
  animation-fill-mode: backwards;
}

.menueList-list:nth-child(1) {
  animation-delay: 0.1s;
}

.menueList-list:nth-child(2) {
  animation-delay: 0.2s;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .container {
    padding: 15rpx;
  }

  .profile-card {
    padding: 40rpx 30rpx;
  }

  .action-buttons {
    gap: 15rpx;
  }

  .action-btn {
    padding: 15rpx;
    font-size: 24rpx;
  }

  .action-icon {
    width: 35rpx;
    height: 35rpx;
  }

  .menueList-content {
    height: auto;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .menueList-list {
    padding: 25rpx;
    font-size: 28rpx;
  }
}