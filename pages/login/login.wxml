<global-background>
  <view class="container">
    <view class="login-card">

      <text class="title">欢迎回来</text>
      <text class="subtitle">登录您的账户</text>
      
      <view class="input-group">
        <view class="input-wrapper">
          <image class="input-icon" src="/images/default_avatar.png"></image>
          <input class="input" placeholder="请输入用户名" bindinput="onUsernameInput" />
        </view>
        <view class="input-wrapper">
          <image class="input-icon" src="/images/default_avatar.png"></image>
          <input class="input" placeholder="请输入密码" password bindinput="onPasswordInput" />
        </view>
      </view>
      
      <button class="button login-btn" bindtap="onLogin">登录</button>
      <button class="button guest-btn" bindtap="onGuestLogin">游客访问</button>
    </view>
  </view>
</global-background>