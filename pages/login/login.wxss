/* 高级黑和象牙白主题配色 */
:root {
  --primary-black: #121212;
  /* 高级黑 */
  --secondary-black: #1f1f1f;
  /* 次级黑 */
  --accent-black: #2a2a2a;
  /* 强调黑 */
  --ivory-white: #FFFFF0;
  /* 象牙白 */
  --light-ivory: #f8f8f0;
  /* 浅象牙色 */
  --placeholder-gray: #aaaaaa;
  /* 占位符灰色 */
}

.container {
  width: 100vw;
  height: 100vh;
  background-color: var(--primary-black);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background-color: var(--secondary-black);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--ivory-white);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #cccccc;
}

.nickname-preview {
  font-size: 32rpx;
  color: var(--ivory-white);
  margin-top: 20rpx;
  font-weight: bold;
  height: 40rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  padding: 0;
  border: none;
  background: transparent;
  position: relative;
  overflow: hidden;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: var(--accent-black);
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 0 0 50% 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  font-size: 24rpx;
  color: var(--ivory-white);
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}

.input-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.nickname-input {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: var(--accent-black);
  border: 2rpx solid var(--accent-black);
  border-radius: 15rpx;
  font-size: 32rpx;
  color: var(--ivory-white);
  transition: all 0.3s ease;
}

.nickname-input:focus {
  border-color: var(--ivory-white);
  outline: none;
}

.nickname-input::placeholder {
  color: var(--placeholder-gray);
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background-color: var(--ivory-white);
  color: var(--primary-black);
  font-size: 36rpx;
  font-weight: bold;
  border: none;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  background-color: var(--light-ivory);
}

/* 响应式设计 */
@media (min-width: 768px) {
  .login-card {
    padding: 80rpx 60rpx;
  }

  .title {
    font-size: 56rpx;
  }

  .avatar-wrapper {
    width: 200rpx;
    height: 200rpx;
  }

  .avatar {
    width: 200rpx;
    height: 200rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.login-card {
  animation: fadeIn 0.6s ease-out forwards;
}

/* 加载指示器 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid var(--accent-black);
  border-top: 8rpx solid var(--ivory-white);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  color: var(--ivory-white);
  font-size: 28rpx;
  margin-top: 20rpx;
}