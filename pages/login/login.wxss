.container {
  padding: 0;
  /* background: linear-gradient(135deg, #0c1117 0%, #f48eb5 100%); */
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.login-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 20rpx 40rpx rgba(12, 17, 23, 0.2);
  text-align: center;
  box-sizing: border-box;
  border: 2rpx solid #f48eb5;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  animation: pulse 2s infinite;
  box-sizing: border-box;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
  color: #ffffff;
}

.subtitle {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.input-wrapper {
  position: relative;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.input-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  box-sizing: border-box;
}

.input {
  border: 2rpx solid #f48eb5;
  border-radius: 50rpx;
  padding: 20rpx 20rpx 20rpx 70rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #ffffff;
  color: #0c1117;
}

.input:focus {
  border-color: #0c1117;
  outline: none;
}

.button {
  width: 100%;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border: none;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.login-btn {
  background: #0c1117;
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(12, 17, 23, 0.3);
  border: 2rpx solid #f48eb5;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(12, 17, 23, 0.3);
  background: #f48eb5;
}

.guest-btn {
  width: 100%;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border: none;
  transition: all 0.3s ease;
  background: transparent;
  color: #ffffff;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
}

.guest-btn:active {
  transform: translateY(2rpx);
  background: rgba(12, 17, 23, 0.1);
}

.footer {
  margin-top: 40rpx;
  box-sizing: border-box;
}

.footer-text {
  font-size: 24rpx;
  color: #ffffff;
}