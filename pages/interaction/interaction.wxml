              </view>
            </view>
          </scroll-view>
        </view>
      </view> -->

    </view>

    <!-- 悬浮按钮 -->
    <view class="float-button" bindtap="navigateToPublish">
      <text class="float-button-text">+</text>
    </view>

  </view>
</global-background>