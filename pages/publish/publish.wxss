.container {
  /* padding: 20rpx; */
  /* background-color: #f5f5f5; */
  /* height: calc(100vh - 128rpx); */
  box-sizing: border-box;
  position: relative;
  background: #f48eb5;
  min-height: 100vh;
}

.publish-form {
  margin-top: 40rpx;
  width: 100vw;
  height: 100%;
  padding: 20rpx 40rpx;

}

.form-item {
  margin-bottom: 40rpx;
}

.title-input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.content-input {
  width: 100%;
  height: 500rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  resize: none;
}

.image-upload-container {
  padding: 20rpx 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.delete-button {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.add-image-button {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #cccccc;
}

.add-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.image-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
  text-align: center;
}

.submit-button-container {
  margin-top: 50rpx;
  text-align: center;
}

.submit-button {
  width: 80%;
  height: 80rpx;
  background-color: #f48eb5;
  color: white;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.submit-button::after {
  border: none;
}

.debug-section {
  margin-top: 30rpx;
  text-align: center;
}

.debug-button {
  width: 80%;
  height: 80rpx;
  background-color: #6c757d;
  color: white;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.debug-button::after {
  border: none;
}