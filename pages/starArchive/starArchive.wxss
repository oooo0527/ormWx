.container {
  padding: 20rpx;
  /* background: linear-gradient(135deg, #000000 0%, #333333 100%); */
  min-height: 100vh;
  box-sizing: border-box;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.stars-list {
  background: #000000;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(255, 255, 255, 0.2);
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

.star-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #ffffff;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.star-item:hover {
  background: #333333;
  transform: translateY(-2rpx);
}

.star-item:last-child {
  border-bottom: none;
}

.star-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 255, 255, 0.1);
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

.star-info {
  flex: 1;
  box-sizing: border-box;
}

.star-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.star-en-name {
  font-size: 26rpx;
  color: #cccccc;
  margin-bottom: 8rpx;
}

.star-nicknames {
  font-size: 24rpx;
  color: #999999;
}

.arrow {
  width: 36rpx;
  height: 36rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: fadeIn 0.3s ease;
  box-sizing: border-box;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.modal-content {
  background: #000000;
  border-radius: 20rpx;
  width: 90%;
  max-height: 85%;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
  box-shadow: 0 20rpx 50rpx rgba(255, 255, 255, 0.3);
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #ffffff;
  background: #000000;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  max-height: 60vh;
  box-sizing: border-box;
}

.detail-avatar {
  width: 240rpx;
  height: 240rpx;
  border-radius: 20rpx;
  display: block;
  margin: 0 auto 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

.detail-info {
  padding: 20rpx 0;
  box-sizing: border-box;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
  box-sizing: border-box;
}

.label {
  width: 140rpx;
  color: #cccccc;
  font-weight: bold;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.5;
}

.intro {
  line-height: 1.7;
  color: #cccccc;
}

.info-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ffffff;
  box-sizing: border-box;
}

.info-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: block;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #ffffff;
  border-radius: 4rpx;
}

.work-item {
  padding: 15rpx 0;
  border-bottom: 1rpx dashed #ffffff;
  box-sizing: border-box;
}

.work-item:last-child {
  border-bottom: none;
}

.work-text {
  color: #cccccc;
  font-size: 28rpx;
  line-height: 1.6;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}