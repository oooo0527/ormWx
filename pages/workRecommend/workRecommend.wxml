<global-background>
  <view class="container">
    <text class="page-title">作品安利</text>
    
    <!-- 3D堆叠式轮播图 -->
    <view class="carousel-container">
      <view class="carousel-3d" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
        <!-- 卡片容器 -->
        <view class="cards-container">
          <!-- 只显示前3张卡片 -->
          <view class="carousel-card" 
                wx:for="{{displayWorks}}" 
                wx:key="id" 
                style="transform: {{cardTransforms[index]}}; z-index: {{cardZIndexes[index]}}; opacity: {{cardOpacities[index]}};"
                data-index="{{index}}"
                bindtap="selectCard">
            <image class="card-bg" src="{{item.cover}}" mode="aspectFill"></image>
          </view>
        </view>
      </view>
      
      <!-- 指示器 -->
      <!-- <view class="indicators">
        <view class="indicator" wx:for="{{works}}" wx:key="id" data-index="{{index}}" bindtap="selectSlide" style="background-color: {{index === currentSlide ? '#ff6b6b' : '#ccc'}};"></view>
      </view> -->
    </view>
    <view class="image-Box">
  <view>陈奥作品一览</view>
        <scroll-view
      type="list"
      scroll-x
      refresher-enabled="{{true}}"
      refresher-two-level-enabled="{{true}}"
      refresher-two-level-scroll-enabled="{{true}}"
>
    <view class="image-list">
      <view class="image-item" wx:for="{{works}}" wx:key="id">
        <image class="image-thumb" src="{{item.cover}}" mode="aspectFill"></image>
      </view>
    </view>
</scroll-view>
    </view>



    <!-- 详细信息区域 -->
    <view class="detail-section" wx:if="{{!selectedWork}}">
      <view class="detail-header">
        <text class="detail-title">{{selectedWork.title}}</text>
        <view class="like-button" bindtap="toggleLike">
          <text class="like-icon">{{selectedWork.isLiked ? '♥' : '♡'}}</text>
          <text class="like-count">{{selectedWork.likes}}</text>
        </view>
      </view>
      <text class="detail-description">{{selectedWork.description}}</text>
    </view>
  </view>
</global-background>