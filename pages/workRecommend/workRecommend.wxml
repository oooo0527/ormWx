<global-background>
  <custom-navbar title="ormkornnaphat" showBack="{{false}}" showHome="{{false}}"></custom-navbar>
  <view class="container" style="margin-top: 128rpx;">
    <view wx:if="{{!showDetail}}" class="list-container"> 

      <view>
        <!-- 按分类展示作品 -->
        <view class="categories-container">
          <view wx:for="{{categorizedWorks}}" wx:key="{{id}}" class="category-section" data-index="{{id}}" bindtap="onCategoryTap">
            <view class="category-title">{{index}}</view>
            <view class="works-grid">
              <view class="work-item" wx:for="{{item}}" wx:key="id">
                <image class="work-cover" src="{{item.cover}}" mode="aspectFill" lazy-load></image>
                <view class="work-info">
                  <text class="work-title">{{item.title}}</text>
                  <text class="work-year">{{item.year}}</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>

  </view>
</global-background>