/* pages/workRecommend/workRecommend.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
}

/* 上部区域样式 */
.upper-section {
  position: relative;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.poster-container {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 15rpx 30rpx rgba(0, 0, 0, 0.4);
  position: relative;
}

.main-poster {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.poster-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.8);
}

.poster-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.poster-subtitle {
  font-size: 28rpx;
  color: #e0e0e0;
  text-align: center;
}

.entrance-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

.entrance-item.movie {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
}

.entrance-item.tv {
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
}

.entrance-item.publicity {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.entrance-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.entrance-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.entrance-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 斜着的横幅分割 */
.banner-divider {
  position: relative;
  width: 100%;
  height: 60rpx;
  background: linear-gradient(45deg, #6a11cb, #2575fc);
  transform: skewY(-3deg);
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.divider-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  transform: skewY(3deg);
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.5);
}

/* 下部区域样式 */
.lower-section {
  position: relative;
  width: 100%;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}

/* 多重叠加轮播图 */
.multi-carousel-container {
  position: relative;
  width: 100%;
  height: 250rpx;
  margin-bottom: 30rpx;
}

.multi-carousel {
  width: 100%;
  height: 100%;
}

.carousel-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.work-card {
  width: 120rpx;
  height: 180rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(5rpx);
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transform: scale(0.85);
  opacity: 0.7;
  z-index: 2;
  margin: 0 10rpx;
}

.work-card.active {
  transform: scale(1);
  opacity: 1;
  z-index: 3;
  width: 140rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 12rpx 25rpx rgba(0, 0, 0, 0.4);
}

.work-cover {
  width: 100%;
  height: 120rpx;
}

.work-info {
  padding: 10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.3);
}

.work-title {
  display: block;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 5rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-role {
  display: block;
  font-size: 16rpx;
  color: #e0e0e0;
  margin-bottom: 3rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.work-year {
  display: block;
  font-size: 14rpx;
  color: #cccccc;
  text-align: center;
}

/* 装饰性背景元素 */
.decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

.element {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
}

.element.circle {
  width: 80rpx;
  height: 80rpx;
  top: 20rpx;
  right: 30rpx;
}

.element.triangle {
  width: 0;
  height: 0;
  border-left: 30rpx solid transparent;
  border-right: 30rpx solid transparent;
  border-bottom: 60rpx solid rgba(255, 255, 255, 0.05);
  bottom: 30rpx;
  left: 40rpx;
  border-radius: 0;
}

.element.square {
  width: 60rpx;
  height: 60rpx;
  bottom: 40rpx;
  right: 40rpx;
  transform: rotate(45deg);
}

/* 作品详情 */
.work-details {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.details-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.type-tag {
  font-size: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.movie-tag {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: #333;
}

.tv-tag {
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  color: #333;
}

.publicity-tag {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #333;
}

.details-role {
  display: block;
  font-size: 26rpx;
  color: #e0e0e0;
  margin-bottom: 10rpx;
}

.details-year {
  display: block;
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 20rpx;
}

.details-description {
  display: block;
  font-size: 24rpx;
  color: #f0f0f0;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

/* 交互按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  background: rgba(255, 255, 255, 0.15);
  color: white;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.like-btn {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: #333;
}

.share-btn {
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  color: #333;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}