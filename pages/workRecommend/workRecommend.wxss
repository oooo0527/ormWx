.container {
  padding: 20rpx;
  /* background: #f5f5f5; */
  min-height: 100vh;
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.works-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  box-sizing: border-box;
}

.work-item {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.work-cover {
  width: 100%;
  height: 300rpx;
  display: block;
  box-sizing: border-box;
}

.work-info {
  padding: 30rpx;
  box-sizing: border-box;
}

.work-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}

.work-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.work-type {
  font-size: 24rpx;
  background: #FF9500;
  color: white;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
  box-sizing: border-box;
}

.work-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.work-year {
  font-size: 28rpx;
  color: #666;
}

.work-role {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: bold;
}

.work-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.work-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.stat-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.stat-label {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #666;
}

.like-btn {
  background: #007AFF;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.like-btn.liked {
  background: #FF3B30;
}