.container {
  padding: 20rpx;
  /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  min-height: 100vh;
  box-sizing: border-box;
  width: 100vw;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
}

.detail-content {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 100vw;
}

.cover-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
  box-sizing: border-box;
}

.info-section {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.description-section {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.images-section {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  box-sizing: border-box;
}

.image-item {
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  box-sizing: border-box;
}

.image-item:active {
  transform: scale(0.95);
}

.image-thumb {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  box-sizing: border-box;
}

.image-thumb:active {
  opacity: 0.8;
}