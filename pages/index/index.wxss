}

/* 表盘内圈 */
.clock-face::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 280rpx;
  height: 280rpx;
  /* border: 2rpx solid #ddd; */
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

/* 主刻度 */
.major-mark {
  position: absolute;
  width: 4rpx;
  height: 20rpx;
  background-color: #2c3e50;
  transform-origin: bottom center;
}

/* 小时刻度 */
.hour-mark-12 {
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.hour-mark-3 {
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%) rotate(90deg);
}

.hour-mark-6 {
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%) rotate(180deg);
}

.hour-mark-9 {
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%) rotate(270deg);
}

/* 时针 */
.hour-hand {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8rpx;
  height: 70rpx;
  background: linear-gradient(to top, #2c3e50, #34495e);
  border-radius: 4rpx;
  transform-origin: top center;
  transform: translate(-50%, -100%) rotate(0deg);
  z-index: 2;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* 分针 */
.minute-hand {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 6rpx;
  height: 100rpx;
  background: linear-gradient(to top, #7f8c8d, #95a5a6);
  border-radius: 3rpx;
  transform-origin: top center;
  transform: translate(-50%, -100%) rotate(0deg);
  z-index: 3;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* 中心点 */
.center-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(145deg, #e74c3c, #c0392b);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 4;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

