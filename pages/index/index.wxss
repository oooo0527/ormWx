.container {
  padding: 0;
  /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 100rpx;
  width: 100%;
  /* padding: 0 20rpx; */
  box-sizing: border-box;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.login-section {
  width: 80%;
  max-width: 500rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  background: white;
  color: #667eea;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border: none;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}

.guest-btn {
  width: 100%;
  /* background: transparent; */
  /* color: white; */
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: 2rpx solid white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.guest-btn:active {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(2rpx);
}

.footer {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.background-switch {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.background-switch:active {
  transform: scale(0.95);
}

.switch-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}