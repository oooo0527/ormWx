.container {
  padding: 0;
  /* background: linear-gradient(135deg, #0c1117 0%, #f48eb5 100%); */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  position: relative;
  box-sizing: border-box;
}

.header {
  text-align: center;
  width: 100%;
  height: 400rpx;
  /* background: red; */
  position: relative;
  /* background-image: url('../../images//login-bg-home.png'); */
}
.header-box{
  position: absolute;
  bottom: 0;
  margin-left: 50%;
  left: -25%;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1);
  }
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(12, 17, 23, 0.3);
}

.app-subtitle {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.login-section {
  width: 80%;
  max-width: 500rpx;
  box-sizing: border-box;
  height: 
  200px;
}

.login-btn {
  width: 100%;
  background: #0c1117;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border: 2rpx solid #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(12, 17, 23, 0.2);
  transition: all 0.3s ease;
  box-sizing: border-box;
}
.login-text{
  text-align: center;
  color: #0c1117;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(12, 17, 23, 0.2);
  background: #f48eb5;
}

.guest-btn {
  width: 100%;
  background: transparent;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: 2rpx solid #ffffff;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.guest-btn:active {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(2rpx);
}

.footer {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.copyright {
  font-size: 24rpx;
  color: #ffffff;
}

.background-switch {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  background: rgba(12, 17, 23, 0.2);
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.background-switch:active {
  transform: scale(0.95);
}

.switch-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}