  width: 320rpx;
  height: 320rpx;
  /* border: 8rpx solid #2c3e50; */
  border-radius: 50%;
  /* background: linear-gradient(145deg, #f8f9fa, #e9ecef); */
  /* box-shadow:
    0 10rpx 30rpx rgba(0, 0, 0, 0.1),
    inset 0 0 20rpx rgba(0, 0, 0, 0.1); */
