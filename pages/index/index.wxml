
<view class="container">

<view wx:if="{{showHome}}" class="home-container">
  <image src="{{displayImage1}}" class="background-image" mode="aspectFill"></image>
  <!-- 可拖动的小图标 -->
  <view 
  wx:if="{{showHome}}"
    class="draggable-icon-container"
  >
    <view 
      class="small-icon" 

      bindlongpress="switchDisplayImage"
      show-menu-by-longpress="false"
    >
    <image class="icon" src="{{currentIcon}}"></image>
    </view>
  </view>

  </view>
  
  <!-- 用于切换显示的图片 -->
  <view class="display-image-container" wx:else>
    <image src="{{displayImage1}}" class="background-image1" mode="aspectFill"></image>
    <view class="display-image-container-text">
      <view class="display-image-container-text1">HAPPY BIRTHDAY</view>
        <image 
      class="display-image" 
      src="{{displayImage}}" 
      show-menu-by-longpress="false"
    ></image>
    </view>

  </view>
</view>
