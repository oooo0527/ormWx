.container {
  background: #E9E8EF;
  box-sizing: border-box;
  position: relative;
  min-height: 100vh;
}

.carousel-container1 {
  position: relative;
  box-sizing: border-box;
  width: 100%;
}

.selected-work-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 40rpx;
}

.swiper-image {
  width: 400rpx;
  height: 620rpx;
}

.selected-work-title {
  margin-top: 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333333;
}

.selected-work-description {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  text-align: justify;
}

/* 收藏区域 */
.favorite-section {
  margin-top: 30rpx;
}

.favorite-btn {
  background: rgba(245, 245, 245, 0.9);
  border: 2rpx solid #333333;
  color: #333333;
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
}

.favorite-btn:active {
  background: rgba(230, 230, 230, 0.9);
}

/* 返回按钮 */
.back-button {
  position: absolute;
  width: 100%;
  height: 50px;
  left: 20rpx;
  z-index: 99;
}

.selected-work-image {
  opacity: 0.3;
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -1;
}

/* 评论区域 */
.comments-section {
  padding: 30rpx;
  background: rgba(250, 250, 250, 0.9);
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

/* 评论项 */
.comment-item {
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.comment-item:last-child {
  border-bottom: none;
}

/* 评论头部 */
.comment-header {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.comment-Box {
  flex: 1;
}

.comment-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.comment-text {
  color: #333333;
  line-height: 1.6;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eeeeee;
  border: 1rpx solid #dddddd;
}

.comment-user-info {
  flex: 1;
}

.comment-nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.comment-time {
  font-size: 20rpx;
  color: #999999;
}

.comment-like {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: rgba(240, 240, 240, 0.9);
}

.like-icon {
  font-size: 28rpx;
  color: #333333;
  margin-right: 10rpx;
}

.like-count {
  font-size: 24rpx;
  color: #333333;
}

/* 评论内容 */
.comment-content {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.reply-button:active {
  background: rgba(240, 240, 240, 0.9);
}

/* 回复列表 */
.replies-list {
  margin-top: 15rpx;
  width: 90%;
  margin: 0 auto;
}

.toggle-replies {
  text-align: right;
  font-size: 24rpx;
  color: #333333;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.reply-item {
  margin-bottom: 15rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.reply-actions {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.reply-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

/* 回复头部 */
.reply-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.reply-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  background-color: #eeeeee;
  border: 1rpx solid #dddddd;
}

.reply-user-info {
  flex: 1;
}

.reply-nickname {
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
  display: block;
}

.reply-time {
  font-size: 20rpx;
  color: #999999;
}

.reply-content {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
  margin-left: 10rpx;
  flex: 1;
}

.reply-nickname {
  color: #333333;
  font-weight: bold;
  margin-right: 10rpx;
}

/* 回复输入区域 */
.reply-input-area {
  background: rgba(245, 245, 245, 0.9);
  border-radius: 15rpx;
  padding: 15rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.reply-to {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 15rpx;
}

.reply-textarea {
  width: 100%;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 15rpx;
  box-sizing: border-box;
  border: 1rpx solid #dddddd;
}

.reply-actions {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.cancel-btn,
.submit-btn {
  width: 45%;
  font-size: 24rpx;
}

.cancel-btn {
  background: rgba(240, 240, 240, 0.9);
  color: #333333;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.submit-btn {
  background: #333333;
  color: #E9E8EF;
  border: 2rpx solid #333333;
}

/* 评论输入区域 */
.comment-input-area {
  display: flex;
  align-items: flex-end;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.comment-textarea {
  flex: 1;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  padding: 15rpx;
  font-size: 26rpx;
  color: #333333;
  margin-right: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #dddddd;
}

.submit-comment-btn {
  height: 120rpx;
  background: #333333;
  color: #E9E8EF;
  border-radius: 10rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  line-height: 120rpx;
}

.reply-button {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.reply-text {
  width: 120rpx;
  height: 60rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  background: rgba(245, 245, 245, 0.9);
}

/* 回复的回复输入区域 */
.reply-to-reply-input-area {
  background: rgba(245, 245, 245, 0.9);
  border-radius: 15rpx;
  padding: 15rpx;
  margin: 20rpx 0;
  margin-left: 55rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.reply-button2 {
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.reply-text2 {
  color: #333333;
}

/* 高亮动画 */
@keyframes highlightAnimation {
  0% {
    background-color: rgba(240, 240, 240, 0.9);
    transform: scale(1);
  }

  50% {
    background-color: rgba(220, 220, 220, 0.9);
    transform: scale(1.02);
  }

  100% {
    background-color: rgba(240, 240, 240, 0.9);
    transform: scale(1);
  }
}