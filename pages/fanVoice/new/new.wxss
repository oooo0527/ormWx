.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.construction-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.construction-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}