.container {
  padding: 20rpx;
  /* background: linear-gradient(135deg, #000000 0%, #333333 100%); */
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #000000;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.1);
  border: 2rpx solid #ffffff;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.post-btn {
  background: #000000;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 255, 255, 0.4);
  border: 2rpx solid #ffffff;
}

.post-btn:active {
  background: #333333;
}

/* 二级菜单样式 */
.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.category-list {
  display: inline-block;
}

.category-item {
  display: inline-block;
  padding: 15rpx 25rpx;
  margin-right: 20rpx;
  background: #000000;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #ffffff;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  border: 2rpx solid #ffffff;
}

.category-item.active {
  background: #333333;
  color: #ffffff;
  transform: scale(1.05);
  box-shadow: 0 4rpx 8rpx rgba(255, 255, 255, 0.4);
}

.category-item:active {
  transform: scale(0.95);
  background: #333333;
}

.category-item:last-child {
  margin-right: 0;
}

/* 内容区域样式 */
.content-area {
  margin-top: 20rpx;
  /* 添加顶部边距，避免被固定菜单遮挡 */
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.voice-item {
  background: #000000;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.1);
  border: 2rpx solid #ffffff;
}

.voice-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #ffffff;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #cccccc;
}

.voice-content {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.voice-context {
  background: #333333;
  border-left: 6rpx solid #ffffff;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.context-text {
  font-size: 24rpx;
  color: #cccccc;
  line-height: 1.5;
}

.voice-actions {
  display: flex;
  justify-content: flex-start;
  border-top: 2rpx solid #ffffff;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #cccccc;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: fadeIn 0.3s ease;
  box-sizing: border-box;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.modal-content {
  background: #000000;
  border-radius: 20rpx;
  width: 90%;
  max-height: 85%;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
  box-shadow: 0 20rpx 50rpx rgba(255, 255, 255, 0.3);
  box-sizing: border-box;
  border: 2rpx solid #ffffff;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #ffffff;
  background: #000000;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  max-height: 60vh;
  box-sizing: border-box;
}

.textarea {
  border: 2rpx solid #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background: #000000;
  color: #ffffff;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  box-sizing: border-box;
}

.cancel-btn {
  background: #333333;
  color: #ffffff;
  border: 2rpx solid #ffffff;
}

.confirm-btn {
  background: #000000;
  color: #ffffff;
  border: 2rpx solid #ffffff;
}

.confirm-btn:active {
  background: #333333;
}

/* 专区类型颜色区分 */
.voice-item.interaction {
  border-left: 6rpx solid #ffffff;
}

.voice-item.support {
  border-left: 6rpx solid #cccccc;
}

.voice-item.mom {
  border-left: 6rpx solid #999999;
}

.voice-item.dream {
  border-left: 6rpx solid #666666;
}

.voice-item.emoji {
  border-left: 6rpx solid #333333;
}

.category-item.new {
  border-left: 6rpx solid #ffffff;
  background: #000000;
  color: #ffffff;
  animation: pulse 2s infinite;
  border: 2rpx solid #ffffff;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
  }

  50% {
    transform: scale(1.05);
    box-shadow: 0 8rpx 16rpx rgba(255, 255, 255, 0.4);
  }

  100% {
    transform: scale(1);
    box-shadow: 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
  }
}

