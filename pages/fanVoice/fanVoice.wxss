.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.post-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.4);
}

/* 二级菜单样式 */
.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.category-list {
  display: inline-block;
}

.category-item {
  display: inline-block;
  padding: 15rpx 25rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.category-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.4);
}

.category-item:active {
  transform: scale(0.95);
}

.category-item:last-child {
  margin-right: 0;
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.voice-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.voice-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.voice-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.voice-context {
  background: #f0f8ff;
  border-left: 6rpx solid #007AFF;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.context-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.voice-actions {
  display: flex;
  justify-content: flex-start;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #666;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
}

.modal-body {
  padding: 30rpx;
}

.textarea {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

.button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.4);
}

/* 专区类型颜色区分 */
.voice-item.interaction {
  border-left: 6rpx solid #FF9500;
}

.voice-item.support {
  border-left: 6rpx solid #34C759;
}

.voice-item.mom {
  border-left: 6rpx solid #FF3B30;
}

.voice-item.dream {
  border-left: 6rpx solid #AF52DE;
}

.voice-item.emoji {
  border-left: 6rpx solid #007AFF;
}

.category-item.new {
  border-left: 6rpx solid #FF9500;
  background: linear-gradient(135deg, #FF9500, #FF5E3A);
  color: white;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 4rpx 8rpx rgba(255, 149, 0, 0.3);
  }

  50% {
    transform: scale(1.05);
    box-shadow: 0 8rpx 16rpx rgba(255, 149, 0, 0.4);
  }

  100% {
    transform: scale(1);
    box-shadow: 0 4rpx 8rpx rgba(255, 149, 0, 0.3);
  }
}

/* 为不同专区类型添加背景色微调 */
.voice-item.interaction {
  background: linear-gradient(135deg, #fff8f0, #ffffff);
}

.voice-item.support {
  background: linear-gradient(135deg, #f0fdf4, #ffffff);
}

.voice-item.mom {
  background: linear-gradient(135deg, #fff0f0, #ffffff);
}

.voice-item.dream {
  background: linear-gradient(135deg, #f5f0ff, #ffffff);
}

.voice-item.emoji {
  background: linear-gradient(135deg, #f0f5ff, #ffffff);
}