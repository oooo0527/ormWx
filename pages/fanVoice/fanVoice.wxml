<!-- 导入模板 -->
<import src="./interaction/interaction.wxml" />
<import src="./support/support.wxml" />
<import src="./mom/mom.wxml" />
<import src="./dream/dream.wxml" />
<import src="./emoji/emoji.wxml" />
<import src="./new/new.wxml" />

<view class="container">

  
  <!-- 二级菜单 -->
  <scroll-view class="category-scroll" scroll-x="true">
    <view class="category-list">
      <view class="category-item {{currentCategory === 'interaction' ? 'active' : ''}}" data-category="interaction" bindtap="switchCategory">
        <text>互动专区</text>
      </view>
      <view class="category-item {{currentCategory === 'support' ? 'active' : ''}}" data-category="support" bindtap="switchCategory">
        <text>中国应援</text>
      </view>
      <view class="category-item {{currentCategory === 'mom' ? 'active' : ''}}" data-category="mom" bindtap="switchCategory">
        <text>妈粉专区</text>
      </view>
      <view class="category-item {{currentCategory === 'dream' ? 'active' : ''}}" data-category="dream" bindtap="switchCategory">
        <text>梦女专区</text>
      </view>
      <view class="category-item {{currentCategory === 'emoji' ? 'active' : ''}}" data-category="emoji" bindtap="switchCategory">
        <text>表情包专区</text>
      </view>
      <view class="category-item {{currentCategory === 'new' ? 'active' : ''}}" data-category="new" bindtap="switchCategory">
        <text>添加新专区</text>
      </view>
    </view>
  </scroll-view>
  
  <!-- 内容区域 -->
  <view class="content">
    <!-- 互动专区 -->
    <template is="interaction" wx:if="{{currentCategory === 'interaction'}}"  />
    
    <!-- 中国应援 -->
    <template is="support" wx:elif="{{currentCategory === 'support'}}" />
    
    <!-- 妈粉专区 -->
    <template is="mom" wx:elif="{{currentCategory === 'mom'}}" />
    
    <!-- 梦女专区 -->
    <template is="dream" wx:elif="{{currentCategory === 'dream'}}"  />
    
    <!-- 表情包专区 -->
    <template is="emoji" wx:elif="{{currentCategory === 'emoji'}}" />
    
    <!-- 新专区 -->
   
  </view>
  
  <!-- 发布表单弹窗 -->
  <view class="modal" wx:if="{{showPostForm}}">
    <view class="modal-content">
      <view class="modal-header">
        <text class="modal-title">发布心声</text>
        <image class="close-btn" bindtap="hidePostForm" src="/images/close.png"></image>
      </view>
      
      <view class="modal-body">
        <textarea class="textarea" placeholder="分享你的心声..." bindinput="onContentInput" value="{{postContent}}" />
        <button class="button submit-btn" bindtap="postVoice">发布</button>
      </view>
    </view>
  </view>
</view>