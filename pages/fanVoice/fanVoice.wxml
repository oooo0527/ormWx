<global-background>
  <!-- 二级菜单组件 -->
  <fan-voice-category current-category="{{currentCategory}}" bind:categoryChange="switchCategory"></fan-voice-category>
  
  <!-- 内容区域组件 -->
  <view class="content-area">
    <fan-voice-content current-category="{{currentCategory}}" support-data="{{supportData}}"></fan-voice-content>
  </view>
  
  <!-- 发布表单弹窗 -->
  <view class="modal" wx:if="{{showPostForm}}">
    <view class="modal-content">
      <view class="modal-header">
        <text class="modal-title">发布心声</text>
        <image class="close-btn" bindtap="hidePostForm" src="/images/close.png"></image>
      </view>
      
      <view class="modal-body">
        <textarea class="textarea" placeholder="分享你的心声..." bindinput="onContentInput" value="{{postContent}}"></textarea>
      </view>
      
      <view class="modal-footer">
        <button class="button cancel-btn" bindtap="hidePostForm">取消</button>
        <button class="button confirm-btn" bindtap="submitPost">发布</button>
      </view>
    </view>
  </view>
</global-background>