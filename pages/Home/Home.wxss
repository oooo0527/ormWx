/* 上下浮动动画 */
@keyframes floatUp {
  0% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10rpx);
  }

  100% {
    transform: translateY(0);
  }
}

/* 上下浮动动画 */
@keyframes floatDown {
  0% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(10rpx);
  }

  100% {
    transform: translateY(0);
  }
}

