.calendar-header {
  margin: 40rpx auto;
  /* text-align: center; */
  /* margin-bottom: 20rpx; */
  position: relative;
  z-index: 2;
}

.date-selector {
  display: inline-block;
  padding: 10rpx 20rpx;
  background: rgba(245, 245, 245, 0.8);
  color: #333333;
  border-radius: 8rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(221, 221, 221, 0.3);
}

.weekdays {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.weekday {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #06f461;
}

.days-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  position: relative;
  z-index: 2;
}

.day-item {
  width: calc(100% / 7);
  aspect-ratio: 1/1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 5rpx 0;
  perspective: 1000rpx;
  /* 为3D效果准备 */
}

.day-number {
  font-size: 28rpx;
  color: #06f461;
  z-index: 2;
  transition: all 0.3s ease;
}

.today .day-number {
  color: red;
  font-weight: bold;
}

.event-day {
  transform-style: preserve-3d;
  transition: transform 0.5s ease;
}

.event-day .day-number {
  color: #020202;
  background: rgba(245, 245, 245, 0.8);
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(221, 221, 221, 0.3);
}

.event-day:active {
  transform: rotateY(180deg);
}

.selected .day-number {
  background: #0c1117;
  color: #E9E8EF;
  border-radius: 50%;
}

.event-indicator {
  position: absolute;
  bottom: 5rpx;
  width: 6rpx;
  height: 6rpx;
  background: #333333;
  border-radius: 50%;
  z-index: 2;
}

.event-summary {
  /* position: absolute; */
  /* bottom: -30rpx; */
  font-size: 18rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: center;
  z-index: 2;
}

/* 活动详情弹窗样式 */
.event-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.event-detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.event-detail-content {
  width: 80%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #E9E8EF 0%, #f5f5f5 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(221, 221, 221, 0.3);
}

.event-detail-modal.show .event-detail-content {
  transform: translateY(0);
}

.event-detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
}

.event-detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  cursor: pointer;
}

.event-detail-body {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.event-detail-date {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.event-detail-description {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
}

.calendar-spacer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  height: 100rpx;
}

.calendar-image {
  width: 100rpx;
  height: auto;
  border-radius: 10rpx;
}

