<view class="container">
  <view class="banner">
    <swiper class="banner-swiper" autoplay="{{true}}" interval="5000" duration="1000">
      <swiper-item>
        <image src="./Home.jpg" mode="widthFix" class="banner-image"></image>
      </swiper-item>
      <swiper-item>
        <image src="./Home2.jpg" mode="widthFix" class="banner-image"></image>
      </swiper-item>
    </swiper>
    <scroll-view class="menu-scroll-view" scroll-x="{{true}}">
      <view class="menu-container">
        <view class="menu-item" wx:for="{{menuList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
          <image src="{{item.icon}}" mode="aspectFill" class="menu-icon"></image>
          <view class="menu-text">{{item.name}}</view>
        </view>
      </view>
    </scroll-view>
    <view class="spacer" wx:if="{{false}}">
      <movable-area class="movable-area">
        <movable-view direction="all" scale-area="true" class="movable-view" wx:for="{{nameList}}" wx:key="index" :x="{{index+20}}" y="0">
          {{item}}
        </movable-view>
      </movable-area>
    </view>
  </view>
  <!-- // 音乐 煎蛋卷 好人好事 -->
  <view class="contentList">
    <view class="ListBox">
      <!-- 左   陈奥的缘 -->
      <view class="list-item" bindtap="navigateToPage" data-url="/packHome/personal/personal">
        <!-- <view class="list-item-text">我的陈奥</view> -->
        <image src="./my.jpg" mode="widthFix" lazy-load class="list-image"></image>
      </view>
      <!-- 右   音乐，公益 等 -->
      <view class="list-item1">
        <view class="music-item" wx:for="{{musicList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
          <view class="music-title">{{item.title}}</view>
          <view class="music-des">{{item.des}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="content">
    <view class="content-container">
      <view class="content-container-item" wx:for="{{contentList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
        <image src="{{item.image}}" mode="aspectFill" class="content-image"></image>
        <view class="content-text">{{item.name}}</view>
      </view>
    </view>
  </view>
  <!-- 行程日历表 -->
  <view class="calendar-section">
    <view class="calendar-content">
      <!-- 星空背景 -->
      <view class="star-background">
        <block wx:for="{{stars}}" wx:key="id">
          <view class="star" style="left: {{item.x}}%; top: {{item.y}}%; opacity: {{item.opacity}};"></view>
        </block>
      </view>
      <view class="calendar-header">
        <picker mode="date" fields="month" value="{{selectedDate}}" bindchange="bindDateChange">
          <view class="date-selector">{{selectedYear}}年{{selectedMonth}}月</view>
        </picker>
      </view>
      <view class="calendar-grid">
        <view class="weekdays">
          <text class="weekday">日</text>
          <text class="weekday">一</text>
          <text class="weekday">二</text>
          <text class="weekday">三</text>
          <text class="weekday">四</text>
          <text class="weekday">五</text>
          <text class="weekday">六</text>
        </view>
        <view class="days-grid">
          <block wx:for="{{calendarDays}}" wx:key="index">
            <view class="day-item {{item.isToday ? 'today' : ''}} {{item.hasEvent ? 'event-day' : ''}} {{item.isSelected ? 'selected' : ''}}" bindtap="selectDay" data-date="{{item.date}}" data-event="{{item.event}}">
              <text class="day-number">{{item.day}}</text>
              <!-- <view class="event-indicator" wx:if="{{item.hasEvent}}"></view> -->
              <view class="event-summary" wx:if="{{item.hasEvent}}">{{item.event.title}}</view>
            </view>
          </block>
        </view>
      </view>
    </view>
  </view>
  <!-- 活动详情弹窗 -->
  <view class="event-detail-modal {{showEventDetailModal ? 'show' : ''}}">
    <view class="event-detail-content">
      <view class="event-detail-header">
        <text class="event-detail-title">{{selectedEvent.title}}</text>
        <view class="close-btn" bindtap="closeEventDetailModal">×</view>
      </view>
      <view class="event-detail-body">
        <text class="event-detail-date">{{selectedEvent.date}}</text>
        <text class="event-detail-description">{{selectedEvent.description}}</text>
      </view>
    </view>
  </view>
</view>