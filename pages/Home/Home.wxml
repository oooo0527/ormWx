<view class="container">
  <!-- 添加悬挂灯泡 -->
  <view class="hanging-lamp" bindtap="toggleLampPopup">
    <view class="lamp-rope"></view>
    <image src="{{!isLampOn?'./black.jpg':'./light.jpg'}}" mode="widthFix" class="lamp-bulb"></image>
    <!-- <view class="lamp-bulb {{isLampOn ? 'lamp-on' : ''}}"></view> -->
  </view>
  <!-- 灯泡弹窗 -->
  <view class="lamp-popup {{showLampPopup ? 'show' : ''}}" wx:if="{{showLampPopup}}">
    <view class="popup-overlay" bindtap="toggleLampPopup"></view>
    <view class="popup-content">
      <view class="popup-header">
        <text class="popup-title">最新活动</text>
        <view class="close-btn" bindtap="toggleLampPopup">×</view>
      </view>
      <scroll-view class="popup-body" scroll-y="true">
        <view class="event-item" wx:for="{{eventsData}}" wx:key="_id">
          <view class="event-date">{{item.date}}</view>
          <view class="event-title">{{item.title}}</view>
          <view class="event-desc">{{item.description}}</view>
        </view>
        <view class="no-events" wx:if="{{eventsData.length === 0}}">暂无活动数据</view>
      </scroll-view>
    </view>
  </view>
  <view class="banner">
    <swiper class="banner-swiper" autoplay="{{true}}" interval="5000" duration="1000">
      <!-- <swiper-item>
        <image src="./Home.jpg" mode="widthFix" class="banner-image"></image>
      </swiper-item> -->
      <swiper-item>
        <image src="./Home3.jpg" mode="widthFix" class="banner-image"></image>
      </swiper-item>
    </swiper>
    <view class="spacer" wx:if="{{false}}">
      <movable-area class="movable-area">
        <movable-view direction="all" scale-area="true" class="movable-view" wx:for="{{nameList}}" wx:key="index" :x="{{index+20}}" y="0">
          {{item}}
        </movable-view>
      </movable-area>
    </view>
  </view>
  <view class="conten-box-bg">
    <view class="content" wx:if="{{false}}">
      <view class="content-container">
        <view class="content-container-item" wx:for="{{contentList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
          <image src="{{item.image}}" mode="aspectFill" class="content-image"></image>
          <view class="content-text">{{item.name}}</view>
        </view>
      </view>
    </view>
    <!-- // 音乐 煎蛋卷 好人好事 -->
    <view class="contentList">
      <view class="ListBox">
        <!-- 左   陈奥的缘 -->
        <view class="list-item" bindtap="navigateToPage" data-url="/packHome/personal/personal">
          <!-- <view class="list-item-text">我的陈奥</view> -->
          <image src="./Home.jpg" mode="widthFix" lazy-load class="list-image"></image>
        </view>
        <!-- 右   音乐，公益 等 -->
        <view class="list-item1">
          <view class="music-item" wx:for="{{musicList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
            <view class="music-title">{{item.title}}</view>
            <view class="music-des">{{item.des}}</view>
          </view>
        </view>
      </view>
    </view>
    <scroll-view class="menu-scroll-view" scroll-x="{{true}}">
      <view class="menu-container">
        <view class="menu-item" wx:for="{{menuList}}" wx:key="index" bindtap="navigateToPage" data-url="{{item.url}}">
          <image src="{{item.icon}}" mode="aspectFill" class="menu-icon"></image>
          <view class="menu-text">{{item.name}}</view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>