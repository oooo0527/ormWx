<view class="container">
  <!-- 时间显示和编辑区域 -->
  <view class="time-section">
    <view class="time-display" bindtap="toggleTimePicker">
      <text class="time-title">当前时间：</text>
      <text class="time-text">
        {{hours}}:{{minutes}}
      </text>
    </view>
    
    <!-- 时间选择器 -->
    <view class="time-picker" wx:if="{{showTimePicker}}">
      <picker-view indicator-style="height: 50rpx;" bindchange="onTimeChange" value="{{[selectedHourIndex, selectedMinuteIndex]}}" class="time-picker-view">
        <picker-view-column>
          <view wx:for="{{hoursArray}}" wx:key="index" class="picker-item">{{item}}时</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{minutesArray}}" wx:key="index" class="picker-item">{{item}}分</view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>

  <!-- 分割线 -->
  <view class="divider"></view>

  <!-- 数字列表滚动视图 -->
  <scroll-view class="number-container1" scroll-y="true">
    <view class="number-box" bindtap="incrementNumber" data-index="{{index}}" wx:for="{{numberList}}" wx:key="index">
      {{item}}
    </view>
  </scroll-view>

  <!-- 显示当前选中的数字 -->
  <view class="selected-number">
    当前选中数字: {{selectedNumber}}
  </view>

  <!-- 显示所有数字的列表 -->
  <view class="number-list">
    <view wx:for="{{numberList}}" wx:key="index">
      数字 {{index}}: {{item}}
    </view>
  </view>

  <!-- 文字逐字显示区域 -->
  <view class="text-display">
    <view class="text-content">
      {{displayedText}}
    </view>
    <button class="start-button" bindtap="startTextDisplay">开始显示文字</button>
  </view>
</view>