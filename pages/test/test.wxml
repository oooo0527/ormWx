<view class="container">
  <!-- 表盘区域 -->
  <view class="clock-container">
    <view class="clock-face" bindtouchstart="onTouchStart" bindtouchmove="onTouchMove" bindtouchend="onTouchEnd">
      <!-- 主刻度标记 -->
      <view class="major-mark hour-mark-12"></view>
      <view class="major-mark hour-mark-3"></view>
      <view class="major-mark hour-mark-6"></view>
      <view class="major-mark hour-mark-9"></view>
      
      <!-- 时针 -->
      <view class="hour-hand" style="transform: rotate({{hourDeg}}deg)"></view>
      <!-- 分针 -->
      <view class="minute-hand" style="transform: rotate({{minuteDeg}}deg)"></view>
      <!-- 中心圆点 -->
      <view class="center-dot"></view>
      
      <!-- 时间显示 -->
      <view class="time-display-overlay">
        <text class="time-text">{{hours}}:{{minutes < 10 ? '0' + minutes : minutes}}</text>
      </view>
      
      <!-- 添加一个透明的触摸层覆盖整个表盘 -->
      <view class="touch-overlay"></view>
    </view>
  </view>

  <!-- 分割线 -->
  <view class="divider"></view>

  <!-- 数字列表滚动视图 -->
  <scroll-view class="number-container1" scroll-y="true">
    <view class="number-box" bindtap="incrementNumber" data-index="{{index}}" wx:for="{{numberList}}" wx:key="index">
      {{item}}
    </view>
  </scroll-view>

  <!-- 显示当前选中的数字 -->
  <view class="selected-number">
    当前选中数字: {{selectedNumber}}
  </view>

  <!-- 显示所有数字的列表 -->
  <view class="number-list">
    <view wx:for="{{numberList}}" wx:key="index">
      数字 {{index}}: {{item}}
    </view>
  </view>

  <!-- 文字逐字显示区域 -->
  <view class="text-display">
    <view class="text-content">
      {{displayedText}}
    </view>
    <button class="start-button" bindtap="startTextDisplay">开始显示文字</button>
  </view>
</view>