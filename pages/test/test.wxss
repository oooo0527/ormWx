.container {
  padding: 20rpx;
}

/* 表盘样式 */
.clock-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.clock-face {
  position: relative;
  width: 320rpx;
  height: 320rpx;
  border: 8rpx solid #2c3e50;
  border-radius: 50%;
  background: linear-gradient(145deg, #f8f9fa, #e9ecef);
  box-shadow:
    0 10rpx 30rpx rgba(0, 0, 0, 0.1),
    inset 0 0 20rpx rgba(0, 0, 0, 0.1);
  user-select: none;
  /* 添加触摸相关样式 */
  touch-action: none;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
}

/* 表盘内圈 */
.clock-face::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 280rpx;
  height: 280rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

/* 主刻度 */
.major-mark {
  position: absolute;
  width: 4rpx;
  height: 20rpx;
  background-color: #2c3e50;
  transform-origin: bottom center;
}

/* 小时刻度 */
.hour-mark-12 {
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.hour-mark-3 {
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%) rotate(90deg);
}

.hour-mark-6 {
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%) rotate(180deg);
}

.hour-mark-9 {
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%) rotate(270deg);
}

/* 时针 */
.hour-hand {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8rpx;
  height: 70rpx;
  background: linear-gradient(to top, #2c3e50, #34495e);
  border-radius: 4rpx;
  transform-origin: top center;
  transform: translate(-50%, -100%) rotate(0deg);
  z-index: 2;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* 分针 */
.minute-hand {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 6rpx;
  height: 100rpx;
  background: linear-gradient(to top, #7f8c8d, #95a5a6);
  border-radius: 3rpx;
  transform-origin: top center;
  transform: translate(-50%, -100%) rotate(0deg);
  z-index: 3;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* 中心点 */
.center-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(145deg, #e74c3c, #c0392b);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 4;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

/* 时间显示区 */
.time-display-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  pointer-events: none;
  /* 防止遮挡触摸事件 */
}

/* 触摸层 */
.touch-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  z-index: 5;
  pointer-events: none;
  /* 确保触摸事件能传递到父元素 */
}

.time-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  font-family: 'Arial', sans-serif;
}

.divider {
  height: 2rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.number-container1 {
  height: 400rpx;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.number-box {
  padding: 20rpx;
  margin: 10rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.number-box:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

.selected-number {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.number-list {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.number-list view {
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.number-list view:last-child {
  border-bottom: none;
}

/* 文字逐字显示样式 */
.text-display {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.text-content {
  min-height: 100rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 1px dashed #ccc;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  line-height: 1.5;
  border-radius: 8rpx;
}

.start-button {
  display: block;
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(145deg, #3498db, #2980b9);
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.3);
  transition: all 0.2s ease;
}

.start-button:active {
  background: linear-gradient(145deg, #2980b9, #3498db);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(52, 152, 219, 0.3);
}