.container {
  padding: 20rpx;
}

.time-section {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
}

.time-display {
  margin-bottom: 20rpx;
  text-align: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.time-display:active {
  background-color: #e0e0e0;
}

.time-title {
  font-weight: bold;
  font-size: 32rpx;
}

.time-text {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.time-picker {
  padding: 20rpx 0;
}

.time-picker-view {
  width: 100%;
  height: 300rpx;
  text-align: center;
}

.picker-item {
  line-height: 50rpx;
  text-align: center;
}

.divider {
  height: 2rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.number-container1 {
  height: 400rpx;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
}

.number-box {
  padding: 20rpx;
  margin: 10rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  text-align: center;
  font-size: 28rpx;
}

.number-box:active {
  background-color: #e0e0e0;
}

.selected-number {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
}

.number-list {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
}

.number-list view {
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.number-list view:last-child {
  border-bottom: none;
}

/* 文字逐字显示样式 */
.text-display {
  padding: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
}

.text-content {
  min-height: 100rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 1px dashed #ccc;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  line-height: 1.5;
}

.start-button {
  display: block;
  width: 100%;
  padding: 20rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}

.start-button:active {
  background-color: #0056b3;
}