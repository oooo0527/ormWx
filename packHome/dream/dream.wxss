/* 排行榜详情弹窗样式 */
.ranking-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;

  padding: 40rpx 0;
}

.ranking-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 85%;
  /* max-width: 500rpx; */
  max-height: 70vh;
  overflow: hidden;
  overflow-y: scroll;
  background: linear-gradient(135deg, #E9E8EF 0%, #f5f5f5 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(221, 221, 221, 0.3);
}

.ranking-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
