  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #eee;
  object-fit: cover;
  /* 添加相框效果 */
  border: 3rpx solid white;
  box-shadow: 0 2rpx 8px rgba(0, 0, 0, 0.2);
}

.more-photos {
