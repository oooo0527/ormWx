/* 头部标题 */
.header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 装饰性元素 */
.decorative-elements {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  position: relative;
  z-index: 1;
  max-width: 600rpx;
  margin: 0 auto;
}

.decorative-icon {
  font-size: 36rpx;
  animation: float 3s ease-in-out infinite;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.book-icon {
  animation-delay: 0s;
}

.pencil-icon {
  animation-delay: 1s;
}

.heart-icon {
  animation-delay: 2s;
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10rpx);
  }
}



.campus-wall-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-family: 'Microsoft YaHei', sans-serif;
  /* 斜体效果 */
  font-style: italic;
}

/* 照片预览容器 */
.photo-preview-container {
  display: flex;
  padding: 20rpx;

  border-top: 2rpx dashed #eee;

  background-size: 20rpx 20rpx;
}

.preview-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 15rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #eee;
  object-fit: cover;
  /* 添加相框效果 */
  border: 3rpx solid white;
  box-shadow: 0 2rpx 8px rgba(0, 0, 0, 0.2);
}

.more-photos {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 10rpx;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #ffd700;
  /* 添加胶带粘贴效果 */
  transform: rotate(5deg);
}

/* 标签页切换 */
.tabs {
  display: flex;
  justify-content: center;
  margin: 0 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  overflow: hidden;
  width: 95%;
  /* 添加校园风格的边框 */
  border: 2rpx solid #ffd700;
  box-shadow: 0 2rpx 8px rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #ffffff;
  transition: all 0.3s ease;
  /* 添加手绘风格 */
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 内容区域 */
.content {
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 95%;

  background-size: 20rpx 20rpx, 20rpx 20rpx;
  position: relative;
}


/* 排行榜列表 */
.ranking-list {
  padding: 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f48eb5;
  font-weight: bold;
  color: #333;
}

.header-rank {
  width: 100rpx;
  text-align: center;
}

.header-user {
  flex: 1;
  text-align: left;
  padding-left: 20rpx;
}

.header-score,
.header-photos {
  width: 120rpx;
  text-align: center;
}

/* 排行榜项 */
.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.ranking-item.top-three {
  background: linear-gradient(90deg, rgba(244, 142, 181, 0.1) 0%, rgba(244, 142, 181, 0.05) 100%);
}

.rank-number {
  width: 100rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.gold {
  color: #FFD700;
}

.silver {
  color: #C0C0C0;
}

.bronze {
  color: #CD7F32;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #f48eb5;
}

.user-name {
  font-size: 28rpx;
  color: #333;
}

.score,
.photos-count {
  width: 120rpx;

}

/* 风格分组容器 */
.style-groups {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
  align-items: center;

}

/* 风格分组 */
.style-group {
  height: 300rpx;
  width: 45%;
  margin-bottom: 40rpx;
  /* background: #fff; */
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.style-group:nth-of-type(3n+1) {
  background: #626bec;
  /* 第一个颜色 */
}

.style-group:nth-of-type(3n+2) {

  background: #f48eb5;
  /* 第二个颜色 */
}

.style-group:nth-of-type(3n+3) {
  background: #4facfe;
  /* 第三个颜色 */
}



/* 风格头部 */
.style-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  height: 100%;

}

.style-title {
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);
  /* 文字阴影 */
  font-family: 'Microsoft YaHei', sans-serif;
}

.photo-count {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.photo-item {
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.photo-preview {
  position: relative;
}

.photo-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.photo-count {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.photo-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
}

.photo-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.like-section {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  padding: 10rpx 15rpx;
  border-radius: 30rpx;
}

.like-count {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.heart {
  font-size: 24rpx;
}

.like-section.liked {
  background: #ffebee;
}

.like-section.liked .heart {
  color: #f44336;
}

/* 投稿表单 */
.submit-form {
  padding: 30rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 风格选项 */
.style-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.style-option {
  padding: 15rpx 30rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.style-option.selected {
  background: #f48eb5;
  color: white;
}

/* 上传区域 */
.upload-section {
  height: 600rpx;
  border: 2rpx dashed #ccc;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-placeholder {
  text-align: center;
  color: #999;
}

.upload-placeholder text {
  font-size: 28rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 15rpx;
}

/* 描述输入框 */
.description-input {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 15rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 冷却提示 */
.cooldown-info {
  text-align: center;
  color: #ff4d4f;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background: #f48eb5;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.submit-btn[disabled] {
  background: #cccccc;
}

/* 我的投稿页面样式 */
.my-photos-list {
  padding: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 15rpx;
  border: 2rpx dashed #ccc;
}

.photo-card {
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.photo-img {
  width: 100%;
  height: 300rpx;
  display: block;
}

.photo-details {
  padding: 20rpx;
}

.photo-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.photo-style {
  font-size: 26rpx;
  color: #666;
}

.photo-status {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.status-approved {
  background: #e8f5e9;
  color: #4caf50;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.status-rejected {
  background: #ffebee;
  color: #f44336;
}

.photo-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.photo-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.photo-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: none;
  width: 45%;
}

.view-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.delete-btn {
  background: #ffebee;
  color: #d32f2f;
}

/* 底部装饰 */
.bottom-decoration {
  text-align: center;
  padding: 30rpx 20rpx;
  margin-top: 20rpx;
  border-top: 2rpx dashed #ccc;
  position: relative;
}

.bottom-decoration::before {
  content: "";
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 20rpx;
  background: #ffd700;
  border-radius: 10rpx;
}

.school-motto {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
  font-family: 'KaiTi', serif;
}