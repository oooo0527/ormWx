.container {
  background: #1E2020;
}

/* 头部标题 */
.header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 装饰性元素 */
.decorative-elements {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  position: relative;
  z-index: 1;
  max-width: 600rpx;
  margin: 0 auto;
}

.decorative-icon {
  font-size: 36rpx;
  animation: float 3s ease-in-out infinite;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.book-icon {
  animation-delay: 0s;
}

.pencil-icon {
  animation-delay: 1s;
}

.heart-icon {
  animation-delay: 2s;
}

@keyframes float {

  0%,
  100% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-10rpx);
  }
}



.campus-wall-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-family: 'Microsoft YaHei', sans-serif;
  /* 斜体效果 */
  font-style: italic;
}

/* 照片预览容器 */
