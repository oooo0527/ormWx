.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.star-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.star {
  position: absolute;
  background-color: white;
  border-radius: 50%;
  animation: twinkle 3s infinite alternate;
}

@keyframes twinkle {
  0% {
    opacity: 0.2;
  }

  100% {
    opacity: 1;
  }
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 40rpx;
  z-index: 2;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
  animation: titleGlow 2s infinite alternate;
}

@keyframes titleGlow {
  0% {
    text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
  }

  100% {
    text-shadow: 0 0 20rpx rgba(255, 255, 255, 0.8), 0 0 30rpx rgba(255, 255, 255, 0.6);
  }
}

/* 神秘盒子容器 */
.mystery-box-container {
  position: relative;
  width: 100%;
  height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

/* 中央宝箱 */
.center-box {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  transform-style: preserve-3d;
  perspective: 1000rpx;
  animation: float 4s ease-in-out infinite;
}

.box-lid {
  position: absolute;
  top: -100rpx;
  left: -50rpx;
  width: 300rpx;
  height: 100rpx;
  background: linear-gradient(to bottom, #ffd700, #ffa500);
  border-radius: 20rpx 20rpx 0 0;
  transform-origin: bottom center;
  transition: transform 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
  z-index: 3;
}

.box-lid::before {
  content: "";
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 60rpx;
  background: radial-gradient(circle, #ff6b6b, #ff0000);
  border-radius: 50%;
  box-shadow: 0 0 10rpx #ff0000;
}

.box-body {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(to bottom, #8b4513, #5d2906);
  border-radius: 20rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.5);
  z-index: 2;
}

.box-body::before {
  content: "?";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.8);
}

.box-glow {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 30rpx;
  background: radial-gradient(circle, rgba(255, 215, 0, 0.4), transparent 70%);
  animation: glowPulse 2s infinite alternate;
  z-index: 1;
}

@keyframes glowPulse {
  0% {
    opacity: 0.3;
    transform: scale(1);
  }

  100% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

@keyframes float {
  0% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-20rpx);
  }

  100% {
    transform: translateY(0);
  }
}

/* 浮动趣事球 */
.floating-ball {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background: radial-gradient(circle, #ff6b6b, #ff0000);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: transform 0.3s ease, opacity 0.3s ease;
  animation: floatBall 6s infinite linear;
  transform-style: preserve-3d;
  perspective: 1000rpx;
}

.floating-ball:hover {
  transform: scale(1.2);
}

.ball-number {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.8);
}

@keyframes floatBall {
  0% {
    transform: translate(0, 0) rotate(0deg);
  }

  25% {
    transform: translate(20rpx, -30rpx) rotate(90deg);
  }

  50% {
    transform: translate(0, -60rpx) rotate(180deg);
  }

  75% {
    transform: translate(-20rpx, -30rpx) rotate(270deg);
  }

  100% {
    transform: translate(0, 0) rotate(360deg);
  }
}

/* 展示面板 */
.display-panel {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  width: 80%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.5);
  padding: 30rpx;
  box-sizing: border-box;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
  z-index: 10;
}

.display-panel.show {
  opacity: 1;
  visibility: visible;
  transform: translate(-50%, -50%) scale(1);
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffd700;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: white;
  cursor: pointer;
}

.close-btn:active {
  background: rgba(255, 0, 0, 0.5);
}

.panel-content {
  margin-bottom: 30rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.panel-text {
  font-size: 28rpx;
  color: white;
  line-height: 1.6;
  text-align: center;
}

.panel-footer {
  display: flex;
  justify-content: space-between;
}

.nav-btn {
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
  padding: 0 20rpx;
  z-index: 2;
  position: relative;
  animation: fadeInUp 1s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

