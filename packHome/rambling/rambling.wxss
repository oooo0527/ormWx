.rambling-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.waterfall-column {
  flex: 1;
  width: 0;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
}

.rambling-card {
  width: 100%;
  height: auto;
  padding: 30rpx;
  background: #ffffff;
  color: #000000;
  margin: 20rpx 0;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(8, 7, 7, 0.3);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.rambling-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, #000000, #2b2a2a);
}

.rambling-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.rambling-card-index {
  font-size: 24rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
  position: relative;
  display: inline-block;
}

.rambling-card-index::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: #000000;
  border-radius: 2rpx;
}

.rambling-card-date {
  font-size: 20rpx;
  color: #666666;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.rambling-card-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  font-weight: 300;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .rambling-container {
    padding: 10rpx;
  }

  .rambling-card {
    padding: 24rpx;
    margin: 16rpx 0;
    border-radius: 12rpx;
  }

  .rambling-card-index {
    font-size: 22rpx;
    margin-bottom: 12rpx;
  }

  .rambling-card-date {
    font-size: 18rpx;
    margin-bottom: 16rpx;
  }

  .rambling-card-content {
    font-size: 26rpx;
    text-indent: 52rpx;
    font-weight: 500;
  }
}