/* 圆形按钮容器 */
.circle-button-container {
  margin-bottom: 30rpx;
}

/* 圆形按钮 */
.circle-button {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, green 0%, rgba(10, 15, 30, 0.7) 70%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 60rpx green,
    inset 0 0 20rpx green;
  transition: all 0.2s ease;
  transform: scale(1);
  border: 12rpx solid green;
  position: relative;
  overflow: hidden;
}

.circle-button::before {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  background: conic-gradient(transparent,
      green transparent 30%);
  animation: rotate 3s linear infinite;
  z-index: -1;
}

.circle-button::after {
  content: '';
  position: absolute;
  inset: 3rpx;
  background: linear-gradient(135deg, #0c1117 0%, #1a1a2e 50%, #16213e 100%);
  border-radius: 50%;
  z-index: -1;
}

/* 圆形按钮内部装饰 */
.circle-button-inner {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  z-index: 1;
}

/* 装饰同心圆 */
.circle-button-inner::before {
  content: '';
  position: absolute;
  width: 80%;
  height: 80%;
  border: 2rpx solid green;
  border-radius: 50%;
  box-shadow: 0 0 10rpx green;
  animation: pulse 2s infinite alternate;
}

.circle-button-inner::after {
  content: '';
  position: absolute;
  width: 60%;
  height: 60%;
  border: 2rpx solid green;
  border-radius: 50%;
  box-shadow: 0 0 8rpx green;
  animation: pulse 3s infinite alternate-reverse;
}

/* 装饰点 */
.decoration-dot {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: green;
  border-radius: 50%;
  box-shadow: 0 0 10rpx green;
}

.dot-1 {
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.dot-2 {
  top: 50%;
  right: 20%;
  transform: translateY(-50%);
}

.dot-3 {
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.dot-4 {
  top: 50%;
  left: 20%;
  transform: translateY(-50%);
}

/* 中心图标 */
.center-icon {
  font-size: 80rpx;
  color: green;
  text-shadow: 0 0 15rpx green;
  animation: iconPulse 2s infinite;
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 装饰动画 */
@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.7;
  }

  100% {
    transform: scale(1.05);
    opacity: 1;
  }
}

@keyframes iconPulse {
  0% {
    transform: scale(1);
    text-shadow: 0 0 10rpx green;
  }

  50% {
    transform: scale(1.1);
    text-shadow: 0 0 20rpx green;
  }

  100% {
    transform: scale(1);
    text-shadow: 0 0 10rpx green;
  }
}

.circle-button.pressing {
  transform: scale(1.1);
  box-shadow: 0 0 50rpx green,
    inset 0 0 30rpx green;
  animation: pulse 0.5s infinite alternate;
}

.circle-button.pressing .circle-button-inner::before {
  animation: pulse 0.5s infinite alternate;
  border-color: green;
  box-shadow: 0 0 20rpx green;
}

.circle-button.pressing .circle-button-inner::after {
  animation: pulse 0.5s infinite alternate;
  border-color: green;
  box-shadow: 0 0 15rpx green;
}

.circle-button.pressing .decoration-dot {
  background: green;
  box-shadow: 0 0 15rpx green;
  animation: pulse 0.3s infinite alternate;
}

.circle-button.pressing .center-icon {
  text-shadow: 0 0 25rpx green;
  animation: iconPulse 0.3s infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.button-text {
