<global-background>
  <custom-navbar title="ormkornnaphat" showBack="{{true}}" showHome="{{false}}"></custom-navbar>
  <view class="container">
    <!-- 网格背景 -->
    <view class="grid-bg"></view>
    <!-- 星空背景 -->
    <view class="stars-bg">
      <block wx:for="{{stars}}" wx:key="id">
        <view class="star" style="left: {{item.x}}%; top: {{item.y}}%; width: {{item.size}}px; height: {{item.size}}px; opacity: {{item.opacity}};"></view>
      </block>
    </view>
    <!-- 数字显示面板 -->
    <view class="number-display">
      <text class="number-text">{{currentNumber}}</text>
    </view>
    <!-- 内容显示区域 -->
    <view class="content-display">
      <text class="content-text">{{currentContent}}</text>
    </view>
    <!-- 底部按钮区域 -->
    <view class="bottom-controls">
      <!-- 圆形按钮 -->
      <view class="circle-button-container">
        <view class="circle-button {{isPressing ? 'pressing' : ''}}" bindtouchstart="handleTouchStart" bindtouchend="handleTouchEnd" bindtouchcancel="handleTouchCancel">
          <view class="circle-button-inner">
            <text class="center-icon">✦</text>
            <!-- <text class="button-text">长按浏览</text> -->
          </view>
        </view>
      </view>
      <!-- 重置按钮 -->
      <view class="reset-button-container">
        <button class="reset-button" bindtap="resetNumber">重置</button>
      </view>
    </view>
  </view>
</global-background>