.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.image-gallery {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.image-item {
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.image-item:hover {
  transform: translateY(-10rpx);
}

.image {
  width: 100%;
  height: 400rpx;
}

.image-desc {
  display: block;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}