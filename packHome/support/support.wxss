.support-container {
  padding: 20rpx;
  /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.year-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.year-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.year-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  cursor: pointer;
}

.year-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  transition: transform 0.3s ease;
}

.support-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.support-item {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.support-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.cover-image {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
}

.item-content {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  line-height: 1.4;
  width: 100%;
  box-sizing: border-box;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 100%;
  box-sizing: border-box;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.item-date {
  font-size: 24rpx;
  color: #999;
}

.item-location {
  font-size: 24rpx;
  color: #007AFF;
  /* background: rgba(0, 122, 255, 0.1); */
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}