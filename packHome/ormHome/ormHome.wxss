/* 页面容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 故事容器 */
.stories-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 故事卡片 */
.story-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeInUp 0.5s ease-out;
}

/* 故事头部 */
.story-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  justify-content: space-between;
}

/* 故事图片 */
.story-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  border: 2rpx solid #ddd;
}

/* 故事标题 */
.story-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 故事内容 */
.story-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 内容段落 */
.content-paragraph {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  text-align: justify;
  margin-bottom: 10rpx;
}

/* 回到顶部按钮 */
.scroll-to-top {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(244, 142, 181, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  z-index: 999;
  transition: all 0.3s ease;
}

.scroll-to-top:active {
  transform: scale(0.9);
}

.scroll-to-top-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

/* 淡入动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 渐变动画 */
@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }

  100% {
    background-position: 200% 50%;
  }
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

/* 弹窗内容 */
.modal-content {
  background: linear-gradient(135deg, #E9E8EF 0%, #fafafa 100%);
  border-radius: 24rpx;
  width: 90%;
  max-width: 650rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  animation: modalPopIn 0.3s ease-out;
}

@keyframes modalPopIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 弹窗头部 */
.modal-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #f8f8f8, #E9E8EF);
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #f5f5f5;
  transform: rotate(90deg);
}

/* 弹窗主体 */
.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.modal-story-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.modal-content-paragraph {
  font-size: 28rpx;
  line-height: 1.7;
  color: #555;
  text-align: justify;
  padding: 10rpx 0;
}