.story {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  align-items: center;

}

.story-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.story-content {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}