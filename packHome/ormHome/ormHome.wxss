/* 弹窗遮罩层 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* background: rgba(0, 0, 0, 0.7); */
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  animation: fadeIn 0.3s ease forwards;
}

@keyframes fadeIn {
  to {
    opacity: 1;
    /* 半透明背景 */
    backdrop-filter: blur(2px);
    /* 背景模糊 */
    -webkit-backdrop-filter: blur(2px);
  }
}

/* 弹窗容器 */
.popup-container {
  width: 90%;
  /* max-width: 500rpx; */
