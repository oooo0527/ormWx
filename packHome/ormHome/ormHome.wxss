/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  /* height: 100vh; */
  background: linear-gradient(180deg, #790202 0%, #470101 100%);
  padding: 20rpx;
  box-sizing: border-box;
  /* 添加微妙的纹理背景 */
  /* background-image: radial-gradient(circle at 10% 50%, rgba(129, 3, 3, 0.3) 0%, transparent 10%),
    radial-gradient(circle at 90% 50%, rgba(226, 3, 3, 0.3) 0%, transparent 10%); */
}

/* 顶部菜单容器 */
.top-menus {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  /* 悬挂效果 */
  position: relative;
  top: 20rpx;
  z-index: 10;
}

/* 底部菜单容器 */
.bottom-menus {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  /* 生长效果 */
  position: relative;
  z-index: 10;
  align-items: flex-end;
}

/* 菜单项基础样式 */
.menu-item {
  width: 140rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  position: relative;
  flex-direction: column;
  padding: 20rpx 0;
  box-sizing: border-box;
  /* 添加内阴影增强立体感 */
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  /* 添加光泽效果 */
  background-clip: padding-box;
  /* 添加微妙的内发光效果 */
  background-origin: border-box;
  /* 添加3D透视效果 */
  transform-style: preserve-3d;
  perspective: 1000px;
  /* 设置最小和最大高度 */
  min-height: 450rpx;
  max-height: 500rpx;
  justify-content: space-around;
}

/* 菜单项悬停效果 */
.menu-item:active {
  transform: scale(0.95) translateZ(10px);
  /* 增强按下效果 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.menu-icon {
  height: 200rpx;
  width: 90%;
  translate: 180deg;
  /* margin-top: -180rpx; */
}

.menu-icon1 {
  height: 200rpx;
  width: 90%;
  margin-top: -180rpx;
}

/* 菜单文字样式 */
.menu-text {
  /* color: white; */
