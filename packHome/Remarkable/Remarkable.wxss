/* 高端荣耀殿堂页面样式 */
.remarkable-container {
  min-height: 100vh;
  /* background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%); */
  padding: 20rpx;
  position: relative;
  overflow-x: hidden;
  background: #ffffff;
}

/* 背景装饰元素 */
.remarkable-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 10% 20%, rgba(102, 126, 234, 0.1) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(118, 75, 162, 0.1) 0%, transparent 20%);
  z-index: 1;
}

.remarkable-container>view {
  position: relative;
  z-index: 2;
}

/* 顶部豪华标题区 */
.hero-section {
  text-align: center;
  padding: 10rpx 60rpx 60rpx 60rpx;
  position: relative;
}

.glitch-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.glitch-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  position: relative;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
  animation: glitch 3s infinite;
}

/* 故障效果动画 */
@keyframes glitch {
  0% {
    transform: translate(0);
  }

  20% {
    transform: translate(-2rpx, 2rpx);
  }

  40% {
    transform: translate(-2rpx, -2rpx);
  }

  60% {
    transform: translate(2rpx, 2rpx);
  }

  80% {
    transform: translate(2rpx, -2rpx);
  }

  100% {
    transform: translate(0);
  }
}

.subtitle {
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

.divider {
  width: 100rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #ffd700, transparent);
  margin: 0 auto 20rpx;
  border-radius: 2rpx;
}

.tagline {
  font-size: 28rpx;
  color: #302f2f;
  letter-spacing: 1rpx;
}

/* 区块标题 */
.section-header {
  text-align: center;
  margin-bottom: 50rpx;
  position: relative;
}

.section-title {
  font-size: 36rpx;
  color: #000000;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 1rpx;
}

/* 奖项展示区 */
.awards-section {
  margin-bottom: 80rpx;
  padding: 30rpx;
  /* background: rgba(249, 246, 246, 0.298); */
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.awards-carousel {
  white-space: nowrap;
  width: 100%;
}

.awards-wrapper {
  display: inline-flex;
  padding: 20rpx 0;
}

.award-card {
  width: 100vw;
  height: 300rpx;
  background: #000000;
  border-radius: 16rpx;
  margin-right: 30rpx;
  padding: 20rpx;
  display: inline-flex;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgb(0, 0, 0);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.award-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 20rpx 30rpx rgba(0, 0, 0, 0.4);
}

.award-trophy {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.trophy-icon {
  width: 100rpx;
  height: 100%;
  /* filter: drop-shadow(0 0 10rpx rgba(255, 215, 0, 0.5)); */
}

.award-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.award-name {
  font-size: 32rpx;
  color: #ffd700;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.award-category {
  font-size: 26rpx;
  color: #cccccc;
  margin-bottom: 10rpx;
}

.award-year {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 15rpx;
}

.award-description {
  font-size: 22rpx;
  color: #aaaaaa;
  line-height: 1.4;
}

.shine-effect {
  position: absolute;
  top: -50%;
  left: -100%;
  width: 50%;
  height: 200%;
  background: linear-gradient(to right,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 100%);
  transform: skewX(-25deg);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }

  100% {
    left: 200%;
  }
}

/* 品牌代言区 */
.endorsements-section {
  margin-bottom: 80rpx;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.endorsements-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.brand-card {
  background: linear-gradient(135deg, rgba(40, 40, 40, 0.9) 0%, rgba(20, 20, 20, 0.9) 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
}

.brand-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 20rpx 30rpx rgba(0, 0, 0, 0.4);
}

.brand-logo {
  width: 100%;
  /* height: 120rpx; */
  margin: 0 auto 20rpx;
  filter: grayscale(100%) brightness(1.5);
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.brand-card:hover .brand-logo {
  filter: grayscale(0%) brightness(1);
  transform: scale(1.1);
}

.brand-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.brand-category {
  font-size: 24rpx;
  color: #cccccc;
  margin-bottom: 20rpx;
}

.luxury-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(90deg, #ffd700, #ffaa00);
  color: #000000;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 30rpx;
  letter-spacing: 1rpx;
  margin-left: 20rpx;
}

/* 统计数据区 */
.stats-section {
  display: flex;
  justify-content: space-between;
  /* margin-bottom: 80rpx; */
  padding: 40rpx;
  background: #000000;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  flex-direction: row;
}

.stat-item {
  text-align: center;
  /* flex: 1; */
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 0 10rpx rgba(255, 215, 0, 0.5);
}

.stat-label {
  font-size: 24rpx;
  color: #cccccc;
  letter-spacing: 1rpx;
}

/* 底部签名区 */
.signature-section {
  text-align: center;
  padding: 60rpx 0;
}

.signature-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.signature-divider {
  width: 200rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ffd700, transparent);
  margin: 0 auto 20rpx;
}

.signature-subtext {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 1rpx;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .remarkable-container {
    padding: 10rpx;
  }

  .glitch-text {
    font-size: 36rpx;
  }

  .subtitle {
    font-size: 28rpx;
  }

  .award-card {
    width: 450rpx;
    height: 280rpx;
  }

  .endorsements-grid {
    grid-template-columns: 1fr;
  }


}