.container {
  padding: 20rpx;
  height: calc(100vh - 148rpx);
  box-sizing: border-box;
  padding-top: 0;
  /* 移除顶部padding，因为有导航栏占位 */
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(12, 17, 23, 0.3);
}

.info-card {
  /* background: #0c1117; */
  border-radius: 20rpx;
  overflow: hidden;
  /* box-shadow: 0 10rpx 30rpx rgba(12, 17, 23, 0.2); */
  margin-bottom: 30rpx;
  box-sizing: border-box;
  /* border: 2rpx solid #f48eb5; */
  width: 100%;
}

.card-header {
  padding: 20rpx 30rpx;
  background: #f48eb5;
  /* border-bottom: 2rpx solid #f48eb5; */
  box-sizing: border-box;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.card-content {
  padding: 30rpx;
  box-sizing: border-box;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
  box-sizing: border-box;
}

.label {
  width: 140rpx;
  color: #ffffff;
  font-weight: bold;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.5;
}

.intro {
  line-height: 1.7;
  color: #ffffff;
}

.info-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  /* border-bottom: 2rpx solid #f48eb5; */
  box-sizing: border-box;
}

.info-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.section-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: block;
  position: relative;
  padding-left: 20rpx;
}

.section-subtitle::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #f48eb5;
  border-radius: 4rpx;
}

.work-item {
  padding: 15rpx 0;
  /* border-bottom: 1rpx dashed #f48eb5; */
  box-sizing: border-box;
}

.work-item:last-child {
  border-bottom: none;
}

.work-text {
  color: #ffffff;
  font-size: 28rpx;
  line-height: 1.6;
}

.pet-item {
  margin-bottom: 30rpx;
}

.pet-item:last-child {
  margin-bottom: 0;
}

.divider {
  height: 2rpx;
  background: #f48eb5;
  margin: 20rpx 0;
}