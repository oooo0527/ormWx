}


.avatar1 {
  position: absolute;
  height: 400rpx;
  width: 100%;
  z-index: -1;

  /* overflow: hidden; */

}


.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  position: absolute;
  left: 20rpx;
  bottom: -60rpx;
  z-index: 999;
}

.image {
  width: 100%;
  height: 100%;
}

