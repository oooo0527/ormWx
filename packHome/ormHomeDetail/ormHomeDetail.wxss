  box-sizing: border-box;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding: 40rpx; */
}

.header {
  /* text-align: center; */
  /* margin-bottom: 60rpx; */
  height: 400rpx;
  width: 100%;
  /* line-height: 100rpx; */
  position: relative;
  box-shadow: 0 0 4rpx rgb(231, 231, 231);
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* text-align: right; */

}


.avatar1 {
  position: absolute;
  height: 400rpx;
  width: 100%;
  z-index: -1;

  /* overflow: hidden; */

}


.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  position: absolute;
  left: 20rpx;
  bottom: -60rpx;
  z-index: 999;
}

.image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 0 15rpx rgba(255, 255, 255, 0.7), 0 0 30rpx rgba(255, 255, 255, 0.5);
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  display: block;
}

.title1 {
  font-size: 36rpx;
  font-weight: 500;
  color: #121111;
  /* text-align: center; */
  text-shadow: 0 0 8rpx rgba(45, 45, 45, 0.7), 0 0 10rpx rgba(62, 57, 57, 0.5);
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
  display: block;
  margin-top: 120rpx;
  text-align: right;
  width: 50%;
  margin-left: 50%;

}

.desc {
  /* margin-top: 60rpx; */
  /* text-align: right; */
  /* text-align: center; */
  color: #ffffff;
  text-align: right;
  width: 50%;
  margin-left: 50%;
}

.subtitle {
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  opacity: 0.8;
  display: block;
}

.body {
  /* text-align: center; */
  padding: 80rpx 20rpx;
  background: #ffffff;
  color: #000000;
}

.description {
  font-size: 26rpx;
  color: #ffffff;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}