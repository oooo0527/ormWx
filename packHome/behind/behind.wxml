<global-background>
  <custom-navbar title="时光回望" showBack="{{true}}" showHome="{{false}}"></custom-navbar>
  <view class="container" style="margin-top: {{navBarHeight}}px;height:calc(100vh - {{navBarHeight}}px);">
    <image src="cloud://cloud1-5gzybpqcd24b2b58.636c-cloud1-5gzybpqcd24b2b58-1387507403/Home/后.jpg" class="background-image"></image>
    <!-- 模糊背景 -->
    <view class="blur-background"></view>
    <!-- 自定义时间滚动选择器 -->
    <view class="time-selector-container">
      <view class="time-wheel-container">
        <view class="time-wheel-mask" style="margin-top: 100px;"></view>
        <!-- 选中区域根据当前滚动位置动态定位 -->
        <!-- <view class="time-wheel-selected-area" style="top: {{450 - currentIndex * itemHeight}}px;"></view> -->
        <scroll-view class="time-wheel" scroll-y="true" scroll-with-animation="{{animation}}" scroll-top="{{scrollTop}}" bindscroll="onScroll" show-scrollbar="{{false}}">
          <!-- 添加顶部空白项，确保第一个项目能正确对齐 -->
          <view class="time-wheel-item-placeholder" style="height: 100px;"></view>
          <view class="time-wheel-item {{currentIndex === index ? 'selected' : ''}}" wx:for="{{timeOptions}}" wx:key="index" style="height: {{itemHeight}}px;">
            <view class="time-wheel-title">{{item.title}}</view>
            <!-- <view class="time-wheel-date">{{item.date}}</view> -->
          </view>
          <!-- 添加底部空白项，确保最后一个项目能滚动到选中区域 -->
          <view class="time-wheel-item-placeholder" style="height: 100px;"></view>
        </scroll-view>
      </view>
    </view>
    <!-- 选中时间的详细内容 -->
    <view class="selected-content" wx:if="{{selectedTime}}">
      <view class="content-header">
        <view class="content-title">{{selectedTime.title}}</view>
        <view class="content-date">{{selectedTime.date}}</view>
      </view>
      <view class="content-description">{{selectedTime.content}}</view>
      <view class="content-actions">
        <button class="action-button" bindtap="goToDetail">查看详情</button>
      </view>
    </view>
  </view>
</global-background>