/* packHome/behind/behind.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
  position: relative;
}

.book-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 2000rpx;
}

/* 书籍页面样式 */
.book-page {
  width: 700rpx;
  height: 80vh;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transform-origin: center;
  transition: transform 0.8s cubic-bezier(0.645, 0.045, 0.355, 1);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 翻页动画 - 向左翻页 */
.book-page.turning {
  transform: rotateY(-180deg);
}

/* 翻页动画 - 向右翻页 */
.book-page.turning-back {
  transform: rotateY(180deg);
}

/* 页面内容 */
.page-content {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.main-image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.main-image:active {
  transform: scale(1.02);
}

.placeholder {
  font-size: 32rpx;
  color: #999;
}

/* 页码 */
.page-number {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 页面指示器 */
.page-indicator {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 滑动区域 */
.swipe-area {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}