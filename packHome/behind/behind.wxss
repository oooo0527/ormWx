}

/* 封面 */
.cover {
  flex: 1;
  height: 100%;
  /* padding: 50px 40px; */
  /* background: linear-gradient(45deg,
      #3498db 0%,
      #2ecc71 100%); */
  border-radius: 5px 8px 8px 5px;
  position: relative;
  /* overflow: hidden; */
  /* box-shadow: 0 8rpx 8rpx #525151; */

}

/* 封面图案 */
.cover::before {
  content: '';
  position: absolute;
  top: 20px;
  right: 20px;
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.cover::after {
  content: '';
  position: absolute;
  bottom: 20px;
  left: 20px;
  width: 60px;
  height: 60px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}




/* 装饰线 */
.decorative-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
  background: rgba(255, 255, 255, 0.3);
}

.decorative-line.top {
  top: 30%;
}

.decorative-line.bottom {
  bottom: 30%;
}

/* 底部阴影 */
.shadow {
  position: absolute;
  width: 100%;
  bottom: -20px;
  left: 20px;
  right: 20px;
  height: 20px;
  background: radial-gradient(ellipse at center,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0) 70%);
  border-radius: 50%;
  z-index: -1;
}