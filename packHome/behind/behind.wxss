.book-stack {
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 400rpx;
  transform: translateX(-50%);
  width: 50%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 30rpx 12rpx rgb(0, 0, 0);
  transition: all 0.4s ease;
  transform-origin: bottom center;
  border: 2rpx solid rgb(184, 183, 183);
}


.book-cover {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx 10rpx 0 0;
}



/* 抽屉动画相关样式 */
.drawer-animation {
  transition: all 0.4s ease;
}

.drawer-open {
  transform: translateX(-50%) translateY(-40rpx) scale(1.05);
  /* box-shadow: 0 20rpx 30rpx rgba(0, 0, 0, 0.2); */
  z-index: 999 !important;
}

/* 底部书籍展示区域 */
.book-list-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.8));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  padding: 20rpx 0;
}

.book-scroll {
  white-space: nowrap;
  width: 100%;
  height: 100%;
}

.book-item-wrapper {
  display: inline-block;
  width: 120rpx;
  height: 160rpx;
  margin: 0 15rpx;
}

.book-item {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  transform: scale(0.9);
}

