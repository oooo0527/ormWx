.container {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.container image {
  position: absolute;
  width: 100%;
  height: 100%;
}


/* 模糊背景 */
.blur-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  filter: blur(20px);
  z-index: -1;
}

/* 时间选择器容器 - 占据屏幕的60%高度 */
.time-selector-container {
  height: 60vh;
  /* 占据屏幕的60% */
  width: 100%;
  padding: 40rpx 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 时间滚轮容器 */
.time-wheel-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  /* 调整高度以容纳5个项目 */
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  backdrop-filter: blur(15px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 滚轮遮罩层，制造透视效果 */
.time-wheel-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 30%,
      rgba(0, 0, 0, 0.1) 70%,
      rgba(0, 0, 0, 0.3) 100%);
  pointer-events: none;
  z-index: 2;
}

/* 选中区域指示器 - 现在通过动态样式定位 */
.time-wheel-selected-area {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100rpx;
  /* 选中区域高度 */
  /* 位置将通过动态样式设置 */
  border-top: 2rpx solid rgba(255, 255, 255, 0.3);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
  pointer-events: none;
  z-index: 1;
  background: rgba(255, 255, 255, 0.15);
  /* 添加半透明背景突出选中区域 */
}

/* 滚轮 */
.time-wheel {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 滚轮项目 */
.time-wheel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  height: 100rpx;
  /* 每个项目高度为100rpx，5个总共500rpx */
}

.time-wheel-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.time-wheel-date {
  font-size: 24rpx;
  color: rgba(173, 171, 171, 0.6);
  transition: all 0.3s ease;
}

/* 占位符项目 */
.time-wheel-item-placeholder {
  /* 用于滚动空间的占位符，无内容 */
}

/* 选中项样式 */
.time-wheel-item.selected {
  transform: scale(1.1);
  z-index: 3;
}

.time-wheel-item.selected .time-wheel-title {
  color: #f73434;
  font-size: 38rpx;
  font-weight: 600;
}

.time-wheel-item.selected .time-wheel-date {
  color: #666;
  font-size: 26rpx;
}

/* 选中内容区域 */
.selected-content {
  padding: 40rpx 20rpx;
  margin: 20rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 10rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(4px);
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  max-height: 30vh;
  overflow-y: auto;
}

.content-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.content-date {
  font-size: 26rpx;
  color: #888;
}

.content-description {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.content-actions {
  text-align: center;
}

.action-button {
  background: #000000;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 22rpx 65rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.action-button:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.5);
}

/* 适配picker-view样式 - 简约高级风格 */
.picker-view-column {
  display: flex !important;
  flex-direction: column !important;
  justify-content: center !important;
}

.picker-item {
  text-align: center;
  padding: 0 20rpx;
  transition: all 0.3s ease;
  opacity: 0.6;
  transform: scale(0.95);
}

.picker-item-selected {
  font-size: 38rpx !important;
  color: #333 !important;
  font-weight: 600 !important;
  opacity: 1 !important;
  transform: scale(1.05) !important;
}

/* 标题列表容器 */
.title-list-container {
  height: 100%;
  padding: 40rpx 30rpx;
}

/* 标题项目 */
.title-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.title-item:active {
  transform: scale(0.98);
