/* 心脏爆炸容器样式 */
.heart-explosion-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 250;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
}

.heart-explosion-container.show {
  opacity: 1;
  visibility: visible;
}

/* 中心心脏样式 */
.heart-center {
  font-size: 50rpx;
  /* color: #ff6b6b; */
  text-shadow: 0 0 20rpx rgba(255, 107, 107, 0.8);
  transform: scale(1);
  opacity: 1;
  position: relative;
  z-index: 99;
  font-weight: 800;
  text-shadow: 0 1rpx 2rpx rgba(247, 246, 246, 0.3);

}

.heart-animate {
  animation: heartPulse 3s ease-out, heartExplode 3s ease-out 5s forwards;
}

/* 爆炸粒子样式 */
.heart-particle {
  position: absolute;
  font-size: 24rpx;
  color: rgb(11, 11, 11);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 1;
  padding: 15rpx 25rpx;
  text-align: center;
  line-height: 1.3;
  border-radius: 10rpx;
  min-width: 120rpx;
  max-width: 250rpx;
  word-break: break-all;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.6), 0 0 20rpx rgba(255, 255, 255, 0.3) inset;
  font-weight: bold;
  white-space: normal;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  border: 8rpx solid #ffffff;
}

.particle-animate {
  animation: particleFly var(--duration) ease-out var(--delay) forwards;
}

/* 心脏脉冲动画 */
@keyframes heartPulse {
  0% {
    transform: scale(0.5);
    opacity: 0.5;
  }

  50% {
    transform: scale(0.8);
    opacity: 0.8;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 心脏爆炸动画 */
@keyframes heartExplode {
  0% {

    opacity: 0.5;
  }

  100% {

    opacity: 1;
  }
}

/* 粒子飞散动画 */
@keyframes particleFly {
  0% {
    transform: translate(var(--start-x), var(--start-y)) scale(0);
    opacity: 0.5;
  }

  70% {
    opacity: 0.8;
  }

  100% {
    transform: translate(var(--end-x), var(--end-y)) scale(1);
    opacity: 1;
  }
}