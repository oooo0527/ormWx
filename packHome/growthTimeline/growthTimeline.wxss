/* packHome/growthTimeline/growthTimeline.wxss */
.container {
  position: relative;
}

.star-background-image {
  /* position: absolute; */

  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* object-fit: cover; */
  /* object-position: center; */
  /* z-index: -1; */
}



.star {
  position: absolute;
  /* background-color: white; */
  border-radius: 50%;
  animation: twinkle 3s infinite alternate;
}

@keyframes twinkle {
  0% {
    opacity: 0.2;
  }

  100% {
    opacity: 1;
  }
}

.timeline-container {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.vertical-timeline {
  position: relative;
  padding: 40rpx 0;
}

.vertical-timeline::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 4rpx;
  /* background: rgba(255, 255, 255, 0.3); */
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
}

.timeline-item {
  position: relative;
  /* margin-bottom: 40rpx; */
  z-index: 2;
  width: 40%;
  text-align: center;
}

.timeline-item.left {
  float: left;
  clear: both;

  padding-right: 30rpx;
}

.timeline-item.right {
  float: right;
  clear: both;

  padding-left: 30rpx;
}

.timeline-marker {
  position: absolute;
  width: 16rpx;
  height: 16rpx;

  border-radius: 20%;
  top: 20rpx;
  z-index: 3;
  animation: starTwinkle 1.5s infinite alternate;
  filter: drop-shadow(0 0 5rpx rgba(245, 243, 244, 0.8));
}

.timeline-marker:nth-of-type(2n+1) {
  background-color: #0a0a0a;
}

.timeline-marker:nth-of-type(2n) {
  background-color: #ed740a;
}




.timeline-item.left .timeline-marker {
  right: -8rpx;
}

.timeline-item.right .timeline-marker {
  left: -8rpx;
}

.timeline-content {
  background: rgba(244, 243, 243, 0.4);
  border-radius: 15rpx;
  padding: 15rpx;
  backdrop-filter: blur(10rpx);
  /* border: 1rpx solid rgba(255, 255, 255, 0.2); */
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.timeline-item:active .timeline-content {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.timeline-date {
  font-size: 20rpx;
  color: #e0e0e0;
  margin-bottom: 8rpx;
  border-radius: 10rpx;
}

.timeline-title {
  font-size: 26rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.timeline-desc {
  font-size: 22rpx;
  color: #EF9A9A;
  line-height: 1.2;
}

.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  clear: both;
}

/* 详情弹窗样式 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.detail-modal.show {
  opacity: 1;
  visibility: visible;
}

.detail-content {
  width: 80%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
}

.detail-modal.show .detail-content {
  transform: translateY(0);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.3);
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: rgb(8, 8, 8);
  cursor: pointer;
}

.detail-body {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-time {
  font-size: 24rpx;
  color: #e0e0e0;
  font-weight: 500;
}

.detail-description {
  font-size: 26rpx;
  color: white;
  line-height: 1.5;
}

