/* 视频容器 */
.video-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  overflow: hidden;
}

/* 视频播放器 */
.video-player {
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 视频指示器 */
.video-indicator {
  position: absolute;
  top: 60rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  margin: 10rpx 0;
  transition: all 0.3s ease;
}

.indicator-dot.active {
  background-color: #fff;
  transform: scale(1.3);
}

/* 导航按钮 */
.nav-button {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.prev-button {
  top: 40%;
  left: 30rpx;
}

.next-button {
  top: 60%;
  left: 30rpx;
}

.arrow-up,
.arrow-down {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

/* 滑动提示 */
.swipe-hint {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  z-index: 100;
}

.hint-text {
  color: #fff;
  font-size: 24rpx;
}