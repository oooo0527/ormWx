/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  width: 100%;
}

/* 全局样式 */
.page-container {
  /* padding: 20rpx; */
  box-sizing: border-box;
  width: 100%;
}

/* 自定义导航栏样式 */
.navbar-placeholder {
  height: 88rpx;
  /* 与自定义导航栏高度一致 */
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #ffffff;
}

.subtitle {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 30rpx;
}

.button {
  background-color: #0c1117;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  margin: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
  border: 2rpx solid #f48eb5;
}

.button:hover {
  background-color: #f48eb5;
}

.input {
  border: 2rpx solid #f48eb5;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
  background: #ffffff;
  color: #0c1117;
}

.card {
  background: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(12, 17, 23, 0.1);
  box-sizing: border-box;
  width: 100%;
  border: 2rpx solid #f48eb5;
}

/* 防止页面内容溢出 */
/* 移除可能影响瀑布流布局的全局样式 */

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
picker,
slider,
switch,
navigator {
  box-sizing: border-box;
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}

/* 为瀑布流布局添加特殊样式 */
.waterfall-container {
  display: flex !important;
  flex-direction: row !important;
  width: 100% !important;
}

.waterfall-column {
  flex: 1 !important;
  width: 0 !important;
  display: flex !important;
  flex-direction: column !important;
}

/* 确保全局样式不影响瀑布流布局 */
.global-background {
  display: block !important;
}