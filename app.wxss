/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  width: 100%;
}

/* 全局样式 */
.page-container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.button {
  background-color: #007AFF;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  margin: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
}

.button:hover {
  background-color: #0062CC;
}

.input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.card {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 100%;
}

/* 防止页面内容溢出 */


view,
scroll-view,
swiper,
button,
input,
textarea,
label,
picker,
slider,
switch,
navigator {
  box-sizing: border-box;
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}