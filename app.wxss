/**app.wxss**/
.container {
  height: 100%;
  /* display: flex; */
  /* flex-direction: column; */
  /* align-items: center; */
  /* justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  width: 100%;
  padding-top: 0;
  /* 移除顶部padding，因为有导航栏占位 */
  background: #E9E8EF;
}

/* 全局样式 */
.page-container {
  /* padding: 20rpx; */
  box-sizing: border-box;
  width: 100%;
}

/* 自定义导航栏样式 */
.navbar-placeholder {
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.button {
  background-color: #f5f5f5;
  color: #333333;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  margin: 20rpx 0;
  box-sizing: border-box;
  width: 100%;
  border: 2rpx solid #dddddd;
}

.button:hover {
  background-color: #e0e0e0;
}

.input {
  border: 2rpx solid #dddddd;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
  background: #E9E8EF;
  color: #333333;
}

.card {
  background: #E9E8EF;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 100%;
  border: 2rpx solid #eeeeee;
}

/* 防止页面内容溢出 */
/* 移除可能影响瀑布流布局的全局样式 */

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
picker,
slider,
switch,
navigator {
  box-sizing: border-box;
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  display: none;
}

/* 为瀑布流布局添加特殊样式 */
.waterfall-container {
  display: flex !important;
  flex-direction: row !important;
  width: 100% !important;
}

.waterfall-column {
  flex: 1 !important;
  width: 0 !important;
  display: flex !important;
  flex-direction: column !important;
}

/* 确保全局样式不影响瀑布流布局 */
.global-background {
  display: block !important;
  z-index: 1;
}

.custom-navbar {
  z-index: 9999;
}